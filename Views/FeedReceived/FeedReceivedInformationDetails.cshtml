@using (Html.BeginForm())
{


    <aside class="right-side">

        <section class="content-header">
            <h1>Feed/Medicine Receive<small> Details</small> </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">Farm Details</li>
            </ol>
        </section>

        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">

             <div> <a style="margin-left:10px;" class="btn btn-primary pull-right" href="@Url.Action("ShowAllFeedReceivedd", "FeedReceived")"> <i class="fa fa-fw fa-plus-square"></i>Close</a><input name="" type="button" id="btnPDF" value="Print" class="btn btn-primary pull-right" /></div>
                
            </ul>
        </div>
        <section class="content">

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @ViewBag.Message
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                    <b>Error!</b>
                    @ViewBag.Error
                </div>
            }


  @foreach (var item in Model)
  {
         @Html.HiddenFor(d => item.Id)

         

            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header"> </div>
                            <div class="box-body">
                                <h4 class="box-title">Product Received Information</h4>

                                <div class=" form-group ">
                                    <label class="black_txt_010">Unit Code : </label>
                                    @Html.DisplayFor(model => item.UnitCode, new { @class = "form-control" })
                                </div>
                                
                                
                                  <div class=" form-group ">
                                    <label class="black_txt_010">Date Of Receipt: </label>
                                    @Html.DisplayFor(model => item.DateOfReceiptString, new { @class = "form-control" })
                                </div>
                                 

                                @*<div class=" form-group ">
                                    <label class="black_txt_010">Delivery ManCode: </label>
                                    @Html.DisplayFor(model => item.DeliveryManCode, new { @class = "form-control" })
                                </div>*@

                              

                                

                            </div>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header"> </div>
                            <div class="box-body">
                                <h4 class="box-title">Product Received Information</h4>

                                 <div class=" form-group ">
                                    <label class="black_txt_010">Challan No: </label>
                                    @Html.DisplayFor(model => item.ChallanNo, new { @class = "form-control" })
                                </div>
                                
                                <div class=" form-group ">
                                    <label class="black_txt_010">Delivery ManName : </label>
                                    @Html.DisplayFor(model => item.DeliveryManName, new { @class = "form-control" })
                                </div>

                                @*<div class=" form-group ">
                                    <label class="black_txt_010">Bags: </label>
                                    @Html.DisplayFor(model => item.Bags, new { @class = "form-control" })
                                </div>


                                <div class=" form-group ">
                                    <label class="black_txt_010">Loose: </label>
                                    @Html.DisplayFor(model => item.Loose, new { @class = "form-control" })
                                </div>
                                <div class=" form-group ">
                                    <label class="black_txt_010">Tag No : </label>
                                    @Html.DisplayFor(model => item.Tagno, new { @class = "form-control" })
                                </div>*@
                               
         
                            </div>
                        </div>
                    </div>
                </div>

    

    <div class="Row">

        <div class="form-group">
                          <h3>Feed Details</h3>
                          </div>
                         <div class="form-group">
                         <div class="table-responsive">
                          <table class="my-table-style table" id="dataTable">
                          <tr class="my-table-header">

                           <td class="my-table-header" style="text-align:center;">
                          <label class="black_txt_010">Category Name</label>
                          </td>
                          <td class="my-table-header" style="text-align:center;">
                          <label class="black_txt_010">Product Name</label>
                          </td>

                           <td class="my-table-header" style="text-align:center;">
                          <label class="black_txt_010">Description</label>
                          </td>

                           <td  style="text-align:center;">
                          <label class="black_txt_010">Product Quantity</label>
                          </td>

                           <td  style="text-align:center;">
                          <label class="black_txt_010">Unit Type</label>
                          </td>


                          <td style="text-align:center;">
                          <label class="black_txt_010">Unit Of</label>
                          </td>

                          
                          @*<td style="text-align:center;">
                          <label class="black_txt_010">Price Rate</label>
                          </td>*@

                          <td style="text-align:center;">
                          <label class="black_txt_010">Total Quantity</label>
                          </td>

                           @*<td style="text-align:center;">
                          <label class="black_txt_010">Total Price</label>
                          </td>*@

                           @{ int H = 0;
                               
                            }

                           @for (int i = 0; i < item.feedReceivedDetails.Count(); i++)
                           {

                               H = H + i;
                         
                       
                            <tr >

                            <td  style="text-align:center;">
                           @Html.DisplayFor(model => item.feedReceivedDetails[i].CategoryName, new { @class = "form-control", @placeholder = "Enter Farm Unit Name", @maxlength = "100", @id = "Category" + i, @Name = "CategoryName" + i })
                        
                          </td>

                              <td  style="text-align:center;">
                           @Html.DisplayFor(model => item.feedReceivedDetails[i].ProductName, new { @class = "form-control", @placeholder = "Enter Farm Unit Name", @maxlength = "100", @id = "Feed" + i, @Name = "FeedName" + i })
                        
                          </td>

                           <td style="text-align:center;">
                          @Html.DisplayFor(model => item.feedReceivedDetails[i].Description, new { @class = "form-control", @id = "FeedDesc" + i, @Name = "FeedDesc" + i })
                          </td>

                           <td  style="text-align:center;">
                           @Html.DisplayFor(model => item.feedReceivedDetails[i].Quantity, new { @class = "form-control FeedQuantity", @id = "FeedQuantity" + i, @Name = "FeedQuantity" + i })
                          </td>

                           <td  style="text-align:center;">
                          @Html.DisplayFor(model => item.feedReceivedDetails[i].UOMName, new { @class = "form-control UOMName", @placeholder = "Enter Farm Unit Name", @maxlength = "100", @id = "UOM" + i, @Name = "UOM" + i })
                          </td>


                          <td style="text-align:center;">
                           @Html.DisplayFor(model => item.feedReceivedDetails[i].UnitFormula, new { @class = "form-control PrimaryUnit", @id = "PrimaryUnit" + i, @Name = "PrimaryUnit" + i })
                          </td>

                           @*<td style="text-align:center;">
                           @Html.DisplayFor(model => item.feedReceivedDetails[i].PriceRate, new { @class = "form-control PrimaryUnit", @id = "PrimaryUnit" + i, @Name = "PrimaryUnit" + i })
                          </td>*@

                          <td style="text-align:center;">
                          @{
                               var k = item.feedReceivedDetails[i].UnitFormula * item.feedReceivedDetails[i].Quantity;
                               var p = Convert.ToString(k);                           
                            }

                            
                         @Html.Label("TotalQuantity",p)
                           </td>

                           @*<td style="text-align:center;">
                          @{
                               var tp = item.feedReceivedDetails[i].PriceRate * item.feedReceivedDetails[i].Quantity;
                               var pr = Convert.ToString(tp);                           
                            }

                            
                         @Html.Label("TotalPrice", pr)
                           </td>*@

                             </tr>
                           }
                        
                           </table>

                              @Html.Hidden("IdToHold", H)
                           </div>
                           @* <input type="button" class="add-component-botton" id="btnAdd" onclick="addRow('dataTable')" />*@
                           </div>

                          

</div>




           
        </section>
  }
    </aside>
}





