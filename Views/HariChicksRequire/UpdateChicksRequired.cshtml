<script>
    $(document).ready(function () {


        $('#FarmerId').on('change', function (e) {
            var id = $(this).val();
            var SlNo = 0;
            $("#TotalQuantity").val("");
            $("#IssuedQuantity").val("");

            $.ajax({
                url: '/HariChicksRequire/GetFarmerDetails',
                type: 'post',
                data: JSON.stringify({ farmId: id }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                    if (data.length == 0) {
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                    }
                    else {
                        $("#LastPlacementDate").val(data.LstPlcDt);
                        $("#LastChicksPlaced").val(data.LstChkPlc);

                        $("#MortalityBox").val(data.MortalityPercentage);
                        $("#EpefBox").val(data.EPEF);
                        $("#FcrBox").val(data.FCR);
                        $("#ProductionBox").val(data.ProductionCostKg);
                        $("#CategoryBox").val(data.FarmerCategory);

                    }

                }
            });

        });
    });
</script>

