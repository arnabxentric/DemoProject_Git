        <table width="100%" style=" border:1px solid black; margin-bottom:10px;">
            <thead>
                <tr style=" border:1px solid black; margin-bottom:10px;">
                    <th style="text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Medicine</th>
                    <th style="text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Rate</th>
                    <th style="text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Consumption</th>
                    <th style="text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Amount</th>
                </tr>

            </thead>

            <tbody>
                @if (Model.MedicineConsumptionList != null)
                {
                    for (int i = 0; i < Model.MedicineConsumptionList.Count(); i++)
                    {
                        <tr style=" border:1px solid black; margin-bottom:10px;">
                            <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large">@Model.MedicineConsumptionList[i].MedicineName @Html.HiddenFor(m => Model.MedicineConsumptionList[i].MedicineName) @Html.HiddenFor(m => Model.MedicineConsumptionList[i].MedicineId) @Html.HiddenFor(m => Model.MedicineConsumptionList[i].MedicineCategoryId)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.MedicineConsumptionList[i].Rate / @Model.MedicineConsumptionList[i].UnitUOM @Html.HiddenFor(m => Model.MedicineConsumptionList[i].Rate)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.MedicineConsumptionList[i].Consumption (@Model.MedicineConsumptionList[i].FarmerUOM) @Html.HiddenFor(m => Model.MedicineConsumptionList[i].Consumption)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.MedicineConsumptionList[i].Amount @Html.HiddenFor(m => Model.MedicineConsumptionList[i].Amount)</td>
                        </tr>
                    }


                    <tr>
                        <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large" colspan="3">Total</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.MedicineConsumptionList.Sum(s => s.Amount)</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
        <div class="box-header" style="text-align:center;font-size:x-large"><h3><b>Sales Details</b></h3></div>
        <table width="100%" style=" border:1px solid black; margin-bottom:10px;">

            <thead>
                <tr style=" border:1px solid black; margin-bottom:10px;">
