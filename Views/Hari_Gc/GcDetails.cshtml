                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Invoice</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Party Name</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">No Of Bird</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Total Weight</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Avg Weight</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Rate</th>
                    <th style=" text-align:center; border:1px solid black; margin-bottom:10px;font-size:x-large">Amount</th>
                </tr>

            </thead>

            <tbody>
                @if (Model.BirdSalesList != null)
                {
                    if (Model.BirdSalesList.Count() > 0)
                    {
                        for (int i = 0; i < Model.BirdSalesList.Count(); i++)
                        {
                        <tr style=" border:1px solid black; margin-bottom:10px;">
                            <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large">@Model.BirdSalesList[i].SaleDate @Html.HiddenFor(m => Model.BirdSalesList[i].SaleDate)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large">@Model.BirdSalesList[i].InvoiceNo @Html.HiddenFor(m => Model.BirdSalesList[i].InvoiceNo)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large">@Model.BirdSalesList[i].NameOfParty @Html.HiddenFor(m => Model.BirdSalesList[i].NameOfParty)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList[i].NoOfBird @Html.HiddenFor(m => Model.BirdSalesList[i].NoOfBird)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList[i].TotalWeight @Html.HiddenFor(m => Model.BirdSalesList[i].TotalWeight)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList[i].AvgWeight @Html.HiddenFor(m => Model.BirdSalesList[i].AvgWeight)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList[i].Rate @Html.HiddenFor(m => Model.BirdSalesList[i].Rate)</td>
                            <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList[i].Amount @Html.HiddenFor(m => Model.BirdSalesList[i].Amount)</td>

                        </tr>
                        }


                    <tr>
                        <td style=" border:1px solid black; margin-bottom:10px;font-size:x-large" colspan="3">Total</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList.Sum(s => s.NoOfBird)</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList.Sum(s => s.TotalWeight)</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Math.Round(Convert.ToDecimal(Model.BirdSalesList.Sum(s => s.TotalWeight) / Model.BirdSalesList.Sum(s => s.NoOfBird)), 2)</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Math.Round(Convert.ToDecimal(Model.BirdSalesList.Sum(s => s.Amount) / Model.BirdSalesList.Sum(s => s.TotalWeight)), 2)</td>
                        <td style=" border:1px solid black; margin-bottom:10px;text-align:right;font-size:x-large">@Model.BirdSalesList.Sum(s => s.Amount)</td>
                    </tr>
                    }
                }
            </tbody>
        </table>
