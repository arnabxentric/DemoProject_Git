<script type="text/javascript">
    $(document).ready(function () {
        $(".select2").select2();
        $("#dp3").datepicker({ autoclose: true, todayHighlight: true });



        $('#BranchId').on('change', function () {
            $('#recDetails').css('display', 'none');

            var rvwId = $(this).val();
            $("#loading").fadeIn();


            if (rvwId == '') {
                $("#LinesmanId").empty();
                $("#LinesmanId").append($('<option/>', {
                    value: "",
                    text: "----Select Lines Man ----"
                }));


            }
            else {
                $("#LinesmanId").empty();
                $("#LinesmanId").append($('<option/>', {
                    value: "",
                    text: "----Select Lines Man ----"
                }));


                $.post("/Hari_Report/GetFarmerName", { farmId: rvwId }, function (data) {
                    var select = $("#LinesmanId");
                    select.empty();
                    select.append($('<option/>', {
                        value: "",
                        text: "----Select Lines Man ----"
                    }));

                    $.each(data, function (index, itemData) {

                        select.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Text
                        }));


                    });

                    $("#loading").fadeOut(2000);

                });

            }
        });
    });
</script>

<script>
    $(document).ready(function () {

        $("#btnsubmit").on('click', function () {
            var lineId = $("#LinesmanId").val() || 0;
            var branchid = $("#BranchId").val() || 0;

            $("#loading").fadeIn();


            $.ajax({
                url: '/Hari_Report/EntryStatictics',
                type: 'post',
                data: JSON.stringify({ Id: lineId, Branchid: branchid }),
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    if (data.length == 0) {

                        $("#myModal").modal('show');
                        $('.msg1').html('There are no feed or medicine againest this flock');
                        return false;
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                    }
                    else {
                        $('#recDetails').css('display', 'block');
                        $('#recDetails').html('');
                        $('#recDetails').html(data);
                        $("#loader").hide();
                        $("#loading").fadeOut(2000);

                    }

                }
            });
        });


    });
</script>


