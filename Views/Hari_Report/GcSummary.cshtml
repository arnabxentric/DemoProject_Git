<script>
    $(document).ready(function () {
        $('#BranchId').on('change', function () {
            $('#recDetails').css('display', 'none');
            $('#recDetails1').css('display', 'none');
            $('#recDetails2').css('display', 'none');
            var rvwId = $(this).val();
            $("#loading").fadeIn();


            if (rvwId == '') {
                $("#LotNo").empty();
                $("#LotNo").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

                $("#LotNo1").empty();
                $("#LotNo1").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

                $("#LotNo2").empty();
                $("#LotNo2").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

            }
            else {
                $("#LotNo").empty();
                $("#LotNo").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

                $("#LotNo1").empty();
                $("#LotNo1").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

                $("#LotNo2").empty();
                $("#LotNo2").append($('<option/>', {
                    value: "",
                    text: "----Select Lot No ----"
                }));

                $.post("/Hari_Report/GetLotNo", { farmId: rvwId }, function (data) {
                    var select = $("#LotNo");
                    select.empty();
                    select.append($('<option/>', {
                        value: "",
                        text: "----Select Lot No ----"
                    }));

                    var select1 = $("#LotNo1");
                    select1.empty();
                    select1.append($('<option/>', {
                        value: "",
                        text: "----Select Lot No ----"
                    }));

                    var select2 = $("#LotNo2");
                    select2.empty();
                    select2.append($('<option/>', {
                        value: "",
                        text: "----Select Lot No ----"
                    }));

                    $.each(data, function (index, itemData) {
                      
                        select.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Value
                        }));

                        select1.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Value
                        }));

                        select2.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Value
                        }));
                    });

                    $("#loading").fadeOut(2000);

                });

            }
        });

        $("#LotNo").on('change', function () {
            var lotno = $(this).val();
            var branchId = $("#BranchId").val();
         
            $("#loading").fadeIn();
            $.ajax({
                url: '/Hari_Report/FlockGCSummaryPartial',
                type: 'post',
                data: JSON.stringify({ lotNo1: lotno, branchid: branchId }),
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    if (data.length == 0) {

                        $("#myModal").modal('show');
                        $('.msg1').html('There are no feed or medicine againest this flock');
                        return false;
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                    }
                    else {
                        $('#recDetails').css('display', 'block');
                        $('#recDetails').html('');
                        $('#recDetails').html(data);
                        $("#loading").fadeOut(2000);
                    }

                }
            });
        });

        $("#LotNo1").on('change', function () {
            var lotno = $(this).val();
            var branchId = $("#BranchId").val();
            $("#loading").fadeIn();
            $.ajax({
                url: '/Hari_Report/FlockGCSummaryPartial',
                type: 'post',
                data: JSON.stringify({ lotNo1: lotno, branchid: branchId }),
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    if (data.length == 0) {

                        $("#myModal").modal('show');
                        $('.msg1').html('There are no feed or medicine againest this flock');
                        return false;
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                        }
                    else {
                        $('#recDetails1').css('display', 'block');
                        $('#recDetails1').html('');
                        $('#recDetails1').html(data);
                        $("#loading").fadeOut(2000);
                    }

                }
            });
        });

        $("#LotNo2").on('change', function () {
            var lotno = $(this).val();
            var branchId = $("#BranchId").val();
            $("#loading").fadeIn();
            $.ajax({
                url: '/Hari_Report/FlockGCSummaryPartial',
                type: 'post',
                data: JSON.stringify({ lotNo1: lotno, branchid: branchId }),
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    if (data.length == 0) {

                        $("#myModal").modal('show');
                        $('.msg1').html('There are no feed or medicine againest this flock');
                        return false;
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                        }
                    else {
                        $('#recDetails2').css('display', 'block');
                        $('#recDetails2').html('');
                        $('#recDetails2').html(data);
                        $("#loading").fadeOut(2000);
                    }

                }
            });
        });



    });
</script>

