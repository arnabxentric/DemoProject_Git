<div class="box table-responsive">



    <div class="box-body table-responsive">
        <div class="box-header"> <h3>Medicine Entry Analysis </h3> </div>
        <table id="datatable-buttons1" class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>Farmer Name</th>
                    <th>Flock Code</th>
                    <th>Branch</th>

                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Chiks Placed</th>
                    <th>Sold Bird</th>
                    <th>Bird Weight</th>
                    <th>Total Medicine Cost</th>
                    @foreach (var item in Model.feedGrpMedicineList)
                    {
                        <th> @item.FeedName </th>
                        <th> Amount </th>
                    }
                </tr>

            </thead>

            <tbody>
                @foreach (var item1 in Model.FarmerDailyMedicineConsumeList)
                {
                    <tr>
                        <td>@item1.FarmerName</td>
                        <td>@item1.FlockCode</td>
                        <td align="center">@item1.BranchName</td>
                        <td align="center">@item1.DateOfPlacementString</td>
                        <td align="center">@item1.FlockEndDateString</td>
                        <td align="center">@item1.NoOfChicks</td>
                        <td align="center">@item1.NoOfBirdsSold</td>
                        <td align="center">@item1.NoOfBirdsSoldWt</td>
                        <td align="center">@item1.TotalMedicineCost</td>

                        @foreach (var item2 in Model.feedGrpMedicineList)
                        {
                            chk = 0;
                            foreach (var item3 in item1.feedGrpList)
                            {
                                if (item3.FeedId == item2.FeedId)
                                {

                                    <td align="right">@item3.ConsumeQuantity (@item3.Uom)</td>
                                    <td align="right">@item3.MedicineValue </td>
                                    chk++;
                                }

                            }

                            if (chk == 0)
                            {

                                <td align="right">&#10005;</td>
                                <td align="right">&#10005;</td>
                            }
                        }
                    </tr>

                }
            </tbody>
        </table>
    </div>






