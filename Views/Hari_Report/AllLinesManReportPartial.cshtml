<aside class="right-side">

    <h1>
        Weekly Chick and Feed Status
    </h1>


    <div class="box box-primary">
        <div class="box-header">

        </div>
        <div class="box-body">


            <div class="table-responsive">
                @*<table id="datatable-buttons" class="table table-bordered table-striped chompa">*@
                <table id="example4" width="100%" class="table table-bordered table-striped dataTable chompa " aria-describedby="example2_info">
                    <thead>
                        <tr>

                            <th>
                                SlNo.
                            </th>

                            <th>
                                Farmer Name
                            </th>

                            <th>
                                Flock Code
                            </th>

                            <th>
                                Breed Name
                            </th>

                            <th>
                                Placement Date
                            </th>

                            <th>
                                No Of Chicks Placed
                            </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            SlNo = SlNo + 1;

                            <tr>

                                <td>
                                    @SlNo
                                    <input type="hidden" value="@SlNo" class="hiddenSL" />
                                </td>

                                <td>

                                    @Html.DisplayFor(modelItem => item.FarmerName)

                                </td>

                                <td>
                                    @*<a href='@Url.Action("AllDailyReportPartial", "PoultryDetailedReport", new {From = 0,To = 0, flockid = item.FlockId })' class="AccoDet">@item.FlockCode</a>*@
                                    <input type="button" value="@item.FlockCode" class="AccoDet" />
                                    <input type="hidden" value="@item.FlockId" class="AccoDethid" />
                                    <img src="~/Images/ajax-loader(1).gif" alt="Loader" width="20px" height="20px" style="display:none;" class="imgLoader" />
                                </td>


                                <td align="right"></td>


                                <td align="right">

                                    @Html.DisplayFor(modelItem => item.DateOfReceiveString)
                                </td>

                                <td align="right">
                                    @Html.DisplayFor(modelItem => item.ChicksReceived)

                                </td>


                            </tr>

                            @*<tr>
                                    <td colspan="6"><div id="demo_@SlNo"></div></td>
                                </tr>*@


                        }
                    </tbody>



                </table>



            </div>
        </div>



    </div>
</aside>

<div id="myModal" class="modal fade" width="100%">

    <div class="modal-dialog" width="100%" style="margin-left:10px">
        <div class="modal-content" style="background-color:white">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:black">&times;</button>
                <h3 class="modal-title"><b>Flock Details:</b></h3>
            </div>

            <div class="modal-body" width="100%">
                <div id="FarmerDetails">
                </div>
                <div id="FlockDetails">
                </div>
                <div id="SalesDetails">
                </div>
            </div>

        </div>

    </div>

</div>


