<script type="text/javascript">

    $(document).ready(function () {





        var locations = [];



        //var bId = $("#UnitId").val();

        $.get('/Hari_FarmerEntryLocation/Search', function (data) {



            $.each(data, function () {
                var mr = [this.Date, this.Latitude, this.Longitude]
                //  alert(mr);
                locations.push(mr);

            });



            var map = new google.maps.Map(document.getElementById('googleMap'), {
                zoom: 10,
                center: new google.maps.LatLng(locations[0][1], locations[0][2]),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });

            var infowindow = new google.maps.InfoWindow();

            var marker, i;



            //function pinSymbol(color) {
            //    return {
            //        path: 'M31.5,0C14.1,0,0,14,0,31.2C0,53.1,31.5,80,31.5,80S63,52.3,63,31.2C63,14,48.9,0,31.5,0z M31.5,52.3 c-11.8,0-21.4-9.5-21.4-21.2c0-11.7,9.6-21.2,21.4-21.2s21.4,9.5,21.4,21.2C52.9,42.8,43.3,52.3,31.5,52.3z',
            //        fillColor: color,
            //        fillOpacity: 1,
            //        strokeColor: '#000',
            //        strokeWeight: 0,
            //        scale: 1,
            //    };
            //}


            const image =
                "https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png";
            marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[0][1], locations[0][2]),
                map: map,
                //icon: pinSymbol("#FFFF00.") //defined marker color

            });

            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                return function () {
                    infowindow.setContent(locations[0][0]);
                    infowindow.open(map, marker);
                }
            })(marker, i));




            for (i = 1; i < locations.length; i++) {
                marker = new google.maps.Marker({
                    position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                    map: map,
                    icon: image //defined marker color

                });

                google.maps.event.addListener(marker, 'click', (function (marker, i) {
                    return function () {
                        infowindow.setContent(locations[i][0]);
                        infowindow.open(map, marker);
                    }
                })(marker, i));

             
            }


        });


    });
</script>




<div class="box table-responsive">

    <div class="box-body table-responsive">
        <div class="box-header"><h3>Daily Entry Analysis Of Farmer @Model.FarmerName Flock Code :-@Model.FlockCode</h3>  </div>

        <table id="datatable-buttons" class="table table-bordered table-striped">
            <thead>
                <tr>
                    @*<th>Farmer Name</th>
        <th>Flock Code</th>*@
                    <th>Date</th>
                    <th>Bird Age</th>
                    <th>Opening Bird</th>
                    <th>Avg Wt.</th>
                    <th>Mortality</th>
                    <th>Death Reason</th>
                    <th>Observation</th>
                    <th>Closing Bird</th>
                    <th>Total Mortality</th>
                    <th>Feed Opening</th>
                    <th>Feed Received</th>
                    @*<th>Feed Consumed</th>*@

                    @foreach (var item in Model.feedGrpList)
                    {
                        <th> @item.FeedName </th>
                    }
                    <th>Feed Closing</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item1 in Model.FarmerDailyConsumeList)
                {


                    Slno = Slno + 1;
                    age = age + 1;
                    TotalMortality = TotalMortality + item1.Mortality;
                <tr>
                    @*<td>@Model.FarmerName</td>
        <td>@Model.FlockCode</td>*@

                    <td align="center">
                        @item1.EntryDate
                    </td>
                    <td align="right">
                        @age
                    </td>
                    <td align="right">
                        @OpenBird
                    </td>
                    <td align="right">
                        @item1.AvgWt
                    </td>

                    <td align="right"> @Html.DisplayFor(modelItem => item1.Mortality)</td>
                    <td align="right"> @Html.DisplayFor(modelItem => item1.DeathReason)</td>
                    <td align="right"> @Html.DisplayFor(modelItem => item1.Remarks)</td>
                    <td align="right"> @(OpenBird - item1.Mortality)</td>
                    <td align="right"> @TotalMortality</td>
                    <td align="right"> @Html.DisplayFor(modelItem => item1.FeedOpeningQuantity)</td>
                    <td align="right"> @Html.DisplayFor(modelItem => item1.FeedReceivedQuantity)</td>
                    @*<td align="left"> @Html.DisplayFor(modelItem => item1.TotalConsumeQuantity)</td>*@

                    @{

                        //var list = Model.FarmerDailyConsumeList.Where(r => r.EntDt == item1.FirstOrDefault().EntDt).GroupBy(g => g.ProductId).ToList();
                        OpenBird = (OpenBird - item1.Mortality);
                    }

                    @foreach (var item2 in Model.feedGrpList)
                    {
                        chk = 0;
                        foreach (var item3 in item1.feedGrpList.GroupBy(g => g.FeedId))
                        {
                            if (item3.Key == item2.FeedId)
                            {

                                <td align="right">@item3.Sum(s => s.ConsumeQuantity)</td>

                                chk++;
                            }

                        }

                        if (chk == 0)
                        {

                            <td align="right">&#10005;</td>

                        }
                    }

                    <td align="right"> @Html.DisplayFor(modelItem => item1.ClosingQuantity)</td>
                </tr>



                }
            </tbody>


        </table>
    </div>


