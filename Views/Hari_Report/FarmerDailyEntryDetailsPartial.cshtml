<div class="box table-responsive">

    <div class="box-body table-responsive">
        <div class="box-header"><h3>Daily Entry Analysis Of Farmer <b>@Model.FarmerName</b>  Flock Code :- <b>@Model.FlockCode</b></h3>  </div>

        <table id="example5" class="table table-bordered table-striped">
            <thead>
                <tr>
                    @*<th>Farmer Name</th>
                    <th>Flock Code</th>*@
                    <th>Date</th>
                    <th>Bird Age</th>
                    <th>Opening Bird</th>
                    <th>Avg Wt.</th>
                    <th>Mortality</th>
                    <th>Observation</th>
                    <th>Closing Bird</th>
                    <th>Total Mortality</th>
                    <th>Feed Opening</th>
                    <th>Feed Received</th>
                    @*<th>Feed Consumed</th>*@

                    @foreach (var item in Model.feedGrpList)
                    {
                        <th> @item.FeedName </th>
                    }
                    <th>Feed Closing</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item1 in Model.FarmerDailyConsumeList)
                {


                    Slno = Slno + 1;
                    age = age + 1;
                    TotalMortality = TotalMortality + item1.Mortality;
                    <tr>
                        @*<td>@Model.FarmerName</td>
                        <td>@Model.FlockCode</td>*@

                        <td align="center">
                            @item1.EntryDate
                        </td>
                        <td align="right">
                            @age
                        </td>
                        <td align="right">
                            @OpenBird
                        </td>
                        <td align="right">
                            @item1.AvgWt
                        </td>

                        <td align="right"> @Html.DisplayFor(modelItem => item1.Mortality)</td>
                        <td align="right"> @Html.DisplayFor(modelItem => item1.Remarks)</td>
                        <td align="right"> @(OpenBird - item1.Mortality)</td>
                        <td align="right"> @TotalMortality</td>
                        <td align="right"> @Html.DisplayFor(modelItem => item1.FeedOpeningQuantity)</td>
                        <td align="right"> @Html.DisplayFor(modelItem => item1.FeedReceivedQuantity)</td>
                        @*<td align="left"> @Html.DisplayFor(modelItem => item1.TotalConsumeQuantity)</td>*@

                        @{

                    //var list = Model.FarmerDailyConsumeList.Where(r => r.EntDt == item1.FirstOrDefault().EntDt).GroupBy(g => g.ProductId).ToList();
                    OpenBird = (OpenBird - item1.Mortality);
                        }

                        @foreach (var item2 in Model.feedGrpList)
                        {
                            chk = 0;
                            foreach (var item3 in item1.feedGrpList.GroupBy(g => g.FeedId))
                            {
                                if (item3.Key == item2.FeedId)
                                {

                                    <td align="right">@item3.Sum(s => s.ConsumeQuantity)</td>

                                    chk++;
                                }

                            }

                            if (chk == 0)
                            {

                                <td align="right">&#10005;</td>

                            }
                        }

                        <td align="right"> @Html.DisplayFor(modelItem => item1.ClosingQuantity)</td>
                    </tr>



                }
            </tbody>


        </table>
    </div>

    <div class="box-body table-responsive">
        <div class="box-header"> <h3>Medicine Entry Analysis </h3> </div>
        <table id="example6" class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    @*<th>Farmer Name</th>
                    <th>Flock Code</th>*@
                    <th>Date</th>
                    @*<th>Bird Age</th>
                    <th>Opening Bird</th>
                    <th>Mortality</th>
                    <th>Observation</th>
                    <th>Closing</th>
                    <th>Total Mortality</th>*@
                    @foreach (var item in Model.feedGrpMedicineList)
                    {
                        <th> @item.FeedName </th>
                    }
                </tr>

            </thead>

            <tbody>
                @foreach (var item1 in Model.FarmerDailyMedicineConsumeList.GroupBy(g => g.EntDt))
                {
                    <tr>
                        @*<td>@Model.FarmerName</td>
                        <td>@Model.FlockCode</td>*@

                        <td align="center">
                            @item1.FirstOrDefault().EntryDate
                        </td>

                        @{

                    var list = Model.FarmerDailyMedicineConsumeList.Where(r => r.EntDt == item1.FirstOrDefault().EntDt).GroupBy(g => g.ProductId).ToList();

                        }

                        @foreach (var item2 in Model.feedGrpMedicineList)
                        {
                            chk = 0;
                            foreach (var item3 in list)
                            {
                                if (item3.Key == item2.FeedId)
                                {

                                    <td align="right">@item3.Sum(s => s.ConsumeQuantity)</td>

                                    chk++;
                                }

                            }

                            if (chk == 0)
                            {

                                <td align="right">&#10005;</td>

                            }
                        }
                    </tr>

                }
            </tbody>
        </table>
    </div>

