<script type="text/javascript">
    $(document).ready(function () {
        $("#gID").keydown(function (e) {
            // Allow: backspace, delete, tab, escape, enter and .
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) !== -1 ||
            // Allow: Ctrl+A, Command+A
            (e.keyCode == 65 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: home, end, left, right, down, up
            (e.keyCode >= 35 && e.keyCode <= 40)) {
                // let it happen, don't do anything
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
    });
    $(document).ready(function () {

        $("#gID").attr("maxlength", 2);
        $("#gID").attr("minlength", 2);
        $("#groupName").attr("maxlength", 100);

        $("#btnsubmit").click(function () {


            if ($("#GroupType").val() == "") {
                alert("Please select a Group Type");
                return false;

            }

            if ($("#ParentGroupId").val() == "") {
                alert("Please select a Group Name");
                return false;

            }

            if ($("#gID").val() == "") {
                alert("Please enter  Group Code");
                return false;

            }


            if ($("#groupName").val() == "") {
                alert("Please enter  Group Name");
                return false;

            }




        });
    });

</script>

