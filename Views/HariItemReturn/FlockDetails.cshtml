@model XenERP.Models.HariDailyEntryModelView
@{
    Layout = null;
    var slNo = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="~/Scripts/JqueryValidation.js"></script>
    <script src="../../js/jquery-ui-1.10.3.js" type="text/javascript"></script>
    <title>Bird Type</title>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".select2").select2();
            var today = new Date();
            var afterTwoDays = new Date();
            afterTwoDays.setDate(today.getDate() - 5);
            $("#dp3").datepicker({
                autoclose: true,
                todayHighlight: true,
                startDate: afterTwoDays
            });
        });
    </script>

    <script>
        $(document).ready(function () {


            $(".lftquan").on('keyup', function () {
                var comptd = $(this).closest('td');
                var comptr = comptd.closest('tr');
                var Lstquantity = comptr.find('.consQuan').val();
                var leftQuantity = $(this).val();
                if (parseFloat(leftQuantity) > parseFloat(Lstquantity)) {
                    $("#myModal").modal('show');
                    $('.msg1').html('Return quantity can not greater than Left quantity');
                    $(this).val(0);
                    //comptr.find('.consQuan').val(0);
                    return false;
                }



            });

            $("#HandChallanNo").on('change', function () {
                var flockId = $(this).val();
                $.ajax({
                    url: '/HariItemReturn/ChkIssChallan',
                    type: 'post',
                    data: JSON.stringify({ HandChallanNo: flockId }),
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (data) {

                        if (data.length == 0) {
                            @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                            }
                        else {
                          
                            if (data == 'false') {
                                $("#myModal").modal('show');
                                $('.msg1').html('Hand Challan No Already Exist');
                                $("#HandChallanNo").val("");
                                return false;
                            }

                        }

                    }
                });
            });

            $("form").on("submit", function (event) {
                var retDat = $('#ReturnDate').val();

                if (retDat == '') {
                    $("#myModal").modal('show');
                    $('.msg1').html('Please enter return date');
                    return false;
                }

                var handChal = $("#HandChallanNo").val();
                if (handChal == '') {
                    $("#myModal").modal('show');
                    $('.msg1').html('Please enter hand challan no');
                    return false;
                }
            });
        });
    </script>


</head>

<body>

    <div class="col-md-12">
        <!-- Horizontal Form -->
        @Html.HiddenFor(m => m.DateOfEntry)
        @Html.HiddenFor(m => m.LinesmanId)
        @Html.HiddenFor(m => m.FarmerId)

    </div>



    <div class="row">

        <div class="col-md-12">
            <div class="" style="text-align:center">
                <h4 class=""><b>Return Details</b></h4>
            </div>
            <div class="box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Return Date <span style="color:Red;">*</span> :</label>
                        <div class="input-group date" id="dp3" data-date-end-date="0d" data-date-format="@Session["DateFormatLower"]">
                            @Html.TextBoxFor(model => model.ReturnDate, new { @class = "form-control", @readonly = "" })
                            <span class="input-group-addon" style="width:auto !important">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.ReturnDate)
                    </div>

                    <div class="form-group">
                        <label>Linesman Name :</label>
                        @Html.TextBoxFor(m => m.LinesManName, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label>Reff. Hand Challan No :</label>
                        @Html.TextBoxFor(m => m.HandChallanNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HandChallanNo)
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header" style="text-align:center">
                    <h4 class=""><b>FEED & MEDICINE LEFT QUANTITY</b></h4>
                </div>
                <div class="box-body table-responsive">
                    <table id="datatable-fixed-header" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Feed/Medicine</th>
                                <th>Received Quantity</th>
                                <th>Issued Quantity</th>
                                <th>Left Quantity</th>
                                <th>Return Quantity</th>
                                <th>UOM</th>
                            </tr>
                        </thead>


                        <tbody>
                            @for (int i = 0; i < Model.FedMedList.Count(); i++)
                            {
                                slNo = slNo + 1;
                                <tr>
                                    <td>
                                        @Model.FedMedList[i].ProductName
                                        @Html.HiddenFor(m => Model.FedMedList[i].ProductName)
                                        @Html.HiddenFor(m => Model.FedMedList[i].ProductId)
                                        @Html.HiddenFor(m => Model.FedMedList[i].ProductSize)
                                        @Html.HiddenFor(m => Model.FedMedList[i].ReceivedId)
                                    </td>
                                    <td>
                                        @Model.FedMedList[i].ReceiveQuantity
                                        @Html.HiddenFor(m => Model.FedMedList[i].ReceiveQuantity, new { @class = "recquan" })
                                    </td>
                                    <td>
                                        @Model.FedMedList[i].LstOpQnty
                                        @Html.HiddenFor(m => Model.FedMedList[i].LstOpQnty, new { @class = "lstquan" })
                                    </td>


                                    <td>
                                        @Model.FedMedList[i].ConsumedQuantity
                                        @Html.HiddenFor(m => Model.FedMedList[i].ConsumedQuantity, new { @class = "consQuan" })
                                    </td>

                                    <td>
                                        @Html.TextBoxFor(m => Model.FedMedList[i].LeftQuantity, new { @class = "form-control lftquan" })
                                    </td>
                                    <td>@Model.FedMedList[i].Unit</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div style="text-align:center">
                    <input name="" type="submit" id="btnsave" value="Submit" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>



</body>


</html>