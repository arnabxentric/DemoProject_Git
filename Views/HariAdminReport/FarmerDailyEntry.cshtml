    });
</script>

<script>
    $(document).ready(function () {
        $('#BranchId').on('change', function () {
            $('#recDetails').css('display', 'none');
            var rvwId = $(this).val();
            $("#loading").fadeIn();


            if (rvwId == '') {
                $("#FarmerId").empty();
                $("#FarmerId").append($('<option/>', {
                    value: "",
                    text: "----Select Farmer ----"
                }));

            }
            else {
                $("#FarmerId").empty();
                $("#FarmerId").append($('<option/>', {
                    value: "",
                    text: "----Select Farmer ----"
                }));
                $.post("/HariAdminReport/GetFarmerName", { branchId: rvwId }, function (data) {
                    var select = $("#FarmerId");
                    select.empty();
                    select.append($('<option/>', {
                        value: "",
                        text: "----Select Farmer----"
                    }));

                    $.each(data, function (index, itemData) {

                        select.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Text
                        }));
                    });

                    $("#loading").fadeOut(2000);

                });

            }
        });


        $('#FarmerId').on('change', function () {
            $('#recDetails').css('display', 'none');
            var rvwId = $(this).val();
            $("#loading").fadeIn();


            if (rvwId == '') {
                $("#FlockId").empty();
                $("#FlockId").append($('<option/>', {
                    value: "",
                    text: "----Select Flock Code ----"
                }));

            }
            else {
                $("#FlockId").empty();
                $("#FlockId").append($('<option/>', {
                    value: "",
                    text: "----Select Flock Code ----"
                }));
                $.post("/HariAdminReport/GetFlockDetails", { farmerId: rvwId }, function (data) {
                    var select = $("#FlockId");
                    $("#LinesManName").val(data[0].LineMan);
                    select.empty();
                    select.append($('<option/>', {
                        value: "",
                        text: "----Select Flock Code----"
                    }));

                    $.each(data, function (index, itemData) {

                        select.append($('<option/>', {
                            value: itemData.Id,
                            text: itemData.Value
                        }));
                    });

                    $("#loading").fadeOut(2000);

                });

            }
        });

        $("#FlockId").on('change', function () {
            var flockId = $(this).val();
            $("#loading").fadeIn();
            $.ajax({
                url: '/HariAdminReport/FarmerDailyEntryDetails',
                type: 'post',
                data: JSON.stringify({ flockId: flockId }),
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    if (data.length == 0) {

                        $("#myModal").modal('show');
                        $('.msg1').html('There are no feed or medicine againest this flock');
                        return false;
                        @*// window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["GoldLoneDomain"].ToString()";*@
                        }
                    else {
                        $('#recDetails').css('display', 'block');
                        $('#recDetails').html('');
                        $('#recDetails').html(data);
                        $("#loading").fadeOut(2000);
                    }

                }
            });
        });


    });
</script>




