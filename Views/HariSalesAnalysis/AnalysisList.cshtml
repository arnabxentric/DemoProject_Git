            "bInfo": true,
            "bAutoWidth": true,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                if (aData[6] == "Already Received") {
                    $('td', nRow).css('border-color', 'Red');
                }
                else {
                    $('td', nRow).css('border-color', 'Green');
                }
            }
        });
    });
</script>

