@model XenERP.Models.SalesPerson

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}@*
<script src="../../Scripts/jquery-2.1.0.min.js" type="text/javascript"></script>*@
<script type="text/javascript">
    $(document).ready(function () {
        $("#btncancel").on("click", function () {
            location.href = "/SalesPerson/ShowAllPerson";
        });
    });
</script>
<script language="javascript">
    $(document).ready(function () {
        $("#Countrycode").change(function () {
            $.get("/Home/Showcountrycode", { id: $("#Countrycode").val() }, function (data) {
                var code = "+" + data.countrycode + "-";
                $("#PhoneNumber").val(code);
            });

        });
    });
</script>
<style>
     #CountryId {
          width: 100%;
}
 </style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        
    <aside class="right-side">
          <section  class="content-header">
                    <h1> Sales Person<small>Edit</small> </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li><a href="#">Forms</a></li>
                        <li class="active">General Elements</li>
                    </ol>
            </section>
                  <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="pull-right"> 
                                    <input name="" type="submit" id="btnsave" value="Update" class="btn btn-primary" />
                                     <input name="" type="button" id="btncancel" value="Cancel" class="btn btn-primary" 
                                    </li>
                                </ul>
                 </div>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <!-- left column -->
                        @*<div class="col-md-6">*@
                            <!-- general form elements -->
                         
                               
                                <!-- form start -->
                           
                                <div class="col-md-6">
                                <div class="box box-primary">
                                <div class="box-header">
                
</div>
                                   <div class="box-body">
                                       
                                       

                     
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
             @ViewBag.Message
            </div>
        }
      
      @if (ViewBag.Error != null)
      { 
        <div class="alert alert-danger alert-dismissable">
        <i class="fa fa-ban"></i>
        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
        <b>Error!</b>
        @ViewBag.Error </div>
      }
      
      
                  @Html.HiddenFor(d => d.Id)
                  @Html.HiddenFor(d => d.CompanyId)
                  @Html.HiddenFor(d => d.UserId)
                  @Html.HiddenFor(d => d.BranchId)
      
      

           <div class="form-group">
                      <label class="black_txt_010">Name :<span style="color:Red;">*</span></label>

                   @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter Name", @maxlength = "98" })
                   @Html.ValidationMessageFor(model => model.Name)
           </div>
             <div class="form-group">
                                          <label class="black_txt_010"> Task :<span style="color:Red;">*</span> </label>
                                          @Html.DropDownList("Task", ViewData["type"] as SelectList, new { @class = "form-control" })
                                          @Html.ValidationMessageFor(model => model.Task)
                                    </div>
             <div class="form-group">
                                          <label class="black_txt_010"> E-Mail Id :<span style="color:Red;">*</span> </label>
                                          @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Plant Name", @maxlength = "100",@type="email" })
                                          @Html.ValidationMessageFor(model => model.Email)
                                    </div>

                                    <div class="form-group">
                                         <label class="black_txt_010">Contact No. :</label>
                                         <div class="clr"></div>
                                         @Html.TextBoxFor(model =>model.Phone, new { @class  = "form-control", @placeholder = "Mobile Number", @maxlength = "10", @onkeypress = "return Numeric(event)"})
                                         @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
              
                                        </div>
                         
                    </div>   <!-- /.row -->
                    </div>
                   
                </section><!-- /.content -->
        </aside>
}