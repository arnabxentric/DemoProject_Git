@model IEnumerable<XenERP.Models.ModelView.ChickReceivedModelView>

using XenERP.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    int Slno = 0;
}
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">

    $(function () {
        $('#example1').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<aside class="right-side">
    <section class="content-header">
        <h1>Chick Received Details <small>List</small> </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>



    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <i class="fa fa-ban"></i>
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
            <b>Error!</b>
            @ViewBag.Error
        </div>
    }



    <div class="box">       
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>SlNo.</th>
                        <th>Unit Code</th> 
                        <th>Received Challan No</th> 
                        <th>Chicks name</th>                 
                      <th>Received Chicks</th>
                        <th>Total No Of Chicks</th>
                      <th>Shortage Of Chicks</th>
                       <th>Mortality Of Chicks</th>
                       <th>Chicks Weight</th>
                        <th>Date Of Receipt</th>
                        <th>Issued Chicks</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        Slno = Slno + 1;
                        <tr>
                            <td>@Slno</td>
                            <td align="center"><a href='@Url.Action("FlockReceiptInformationDetails", "ChickReceived", new { id = item.Id })' class="AccoDet">@item.BranchName</a> @Html.HiddenFor(m => item.UnitId, new { @class = "AcId" })</td>                            
                          <td> @Html.DisplayFor(modelItem => item.ChallanNo)</td>

                            <td align="right">
                                @foreach (var ck in item.chicksreceivedetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ChickName != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.ChickName)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                            <td align="right">
                                @foreach (var ck in item.chicksreceivedetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ReceivedChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.ReceivedChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                          <td> @Html.DisplayFor(modelItem => item.NoOfChicks)</td>

                            <td align="right">
                                @foreach (var ck in item.chicksreceivedetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ReceivedChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.ShortageOfChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                            <td align="right">
                                @foreach (var ck in item.chicksreceivedetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ReceivedChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.MortalityOfChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                          <td> @Html.DisplayFor(modelItem => item.ChicksWeight)</td>
                          <td> @Html.DisplayFor(modelItem => item.DateOfReceiptString)</td>
                            <td align="right">
                                @foreach (var ck in item.chicksreceivedetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ReceivedChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.IssuedChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>
                           @*@if (Session["PoultryEditId"] != null)
                           {*@
                           <td> @Html.ActionLink("Edit", "EditChickReceipt", "ChickReceived", new { id = item.Id }, null)  </td>
                            <td> @Html.ActionLink("Delete", "DeleteChickReceipt", "ChickReceived", new { id = item.Id, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>
                           @*}*@
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /.box-body -->
    </div>
</aside>

