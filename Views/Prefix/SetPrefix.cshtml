@model IList<XenERP.Models.Prefix>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      <aside class="right-side"> 

          <section class="content-header">
                    <h1> Set Prefix<small></small> </h1>
                    <ol class="breadcrumb">
                       <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                       <li><a href="#">Forms</a></li>
                       <li class="active">General Elements</li>
                    </ol>
           </section>

             <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="pull-right"> <input name="" type="submit" id="btnsave" value="Save" class="btn btn-primary" /></li>
                                </ul>
             </div>

                <!-- Main content -->
                <section class="content">  
                    <div class="row">
                                <div class="col-md-6">
                                <div class="box box-primary">
                                <div class="box-header">
                     </div>
                                <div class="box-body">
                     
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
                         <i class="fa fa-check"></i>
                         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          @ViewBag.Message
             </div>
        }
        
        @if (ViewBag.Error != null)
        { 
               <div class="alert alert-danger alert-dismissable">
                           <i class="fa fa-ban"></i>
                           <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
              <b>Error!</b>
               @ViewBag.Error 
               </div>
        }
      
         <table  id="example2" class="table table-bordered table-striped1 dataTable" >
           <tbody>
           <tr>
            <th>Name</th>
              <th>Default Prefix</th>
                <th>Set Prefix</th>
              </tr>                
                           @for( int i = 0; i < Model.Count(); i++)
                           {
                 
                                <tr>
                                 
                            <td>     @Html.HiddenFor(m => Model[i].Id)
        @Html.TextBoxFor(m => Model[i].Name, new { @class = "form-control", @readonly = "readonly" })</td> 
        <td>   @Html.TextBoxFor(m => Model[i].DefaultPrefix, new { @class = "form-control", @readonly = "readonly" })</td> 
      <td>     @Html.TextBoxFor(m => Model[i].SetPrefix, new { @class = "form-control" })</td> 
  
                                     </tr>
                
                           }
                           
                                     
                 </tbody>
                 </table>                    
                    </div>
                    </div>   <!-- /.row -->
                    </div>
                               
                </section><!-- /.content -->
        </aside>
}
