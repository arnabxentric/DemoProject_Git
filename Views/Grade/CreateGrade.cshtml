@model XenERP.Models.Grade
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreateGrade", "Grade"))
{
    
     @Html.ValidationSummary(true)
   

      <aside class="right-side"> 

           <section class="content-header">
                    <h1>Grade<small>Add</small> </h1>
                    <ol class="breadcrumb">
                       <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                       <li><a href="#">Forms</a></li>
                       <li class="active">General Elements</li>
                    </ol>
           </section>

             <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="pull-right"> <input name="" type="submit" id="btnsave" value="Save" class="btn btn-primary" /></li>
                                </ul>
             </div>

                <!-- Main content -->
                <section class="content">  
                    <div class="row">
                                <div class="col-md-6">
                                <div class="box box-primary">
                                <div class="box-header">
                     </div>
                                <div class="box-body">
                     
            @if (ViewBag.Message != null)
      {
            <div class="alert alert-success alert-dismissable">
                         <i class="fa fa-check"></i>
                         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          @ViewBag.Message
             </div>
      }
      
            @if (ViewBag.Error != null)
      { 
               <div class="alert alert-danger alert-dismissable">
                           <i class="fa fa-ban"></i>
                           <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
              <b>Error!</b>
               @ViewBag.Error 
               </div>
      }
                                     
                                     <div class="form-group">
                                          <label class="black_txt_010"> Grade Name :<span style="color:Red;">*</span> </label>
                                          @Html.TextBoxFor(model => model.GradeName, new { @class = "form-control", @placeholder = "Enter Grade Name", @maxlength = "100" })
                                          @Html.ValidationMessageFor(model => model.GradeName)
                                    </div>

                                       <div class="form-group">
                                          <label class="black_txt_010"> Minimum Salary : </label>
                                          @Html.TextBoxFor(model => model.MinSal, new { @class = "form-control", @placeholder = "Enter Minimum Salary", @maxlength = "100" })
                                     
                                    </div>

                                       <div class="form-group">
                                          <label class="black_txt_010"> Maximum Salary :</label>
                                          @Html.TextBoxFor(model => model.MaxSal, new { @class = "form-control", @placeholder = "Enter Maximum Salary", @maxlength = "100" })
                                      
                                    </div>

                    </div>
                    </div>   <!-- /.row -->
                    </div>


                     <div class="col-md-6">
                                <div class="box box-primary">
                                <div class="box-header">
                     </div>
                                <div class="box-body">
                                     
                                     <div class="form-group">
                                          <label class="black_txt_010"> Grade Pay : </label>
                                          @Html.TextBoxFor(model => model.GradePay, new { @class = "form-control", @placeholder = "Enter Grade Pay", @maxlength = "100" })
                                        
                                    </div>

                                       <div class="form-group">
                                          <label class="black_txt_010"> Grade Description : </label>
                                          @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter Grade Description", @maxlength = "100" })
                                       
                                    </div>

                                       <div class="form-group">
                                          <label class="black_txt_010"> Grade Status :<span style="color:Red;">*</span> </label>
                                          @Html.CheckBoxFor(model => model.GradeStatus)
                                      
                                    </div>

                    </div>
                    </div>   <!-- /.row -->
                    </div>
                    </div>
                               
                </section><!-- /.content -->
        </aside>
    
}
