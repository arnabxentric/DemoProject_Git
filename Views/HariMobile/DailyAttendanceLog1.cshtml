@*@model GoldLone.Models.UploadImageModelView*@
@{
}

<head>
    <script src="../../Scripts/jquery.fileDownload.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.webcam.min.js"></script>

    <script type="text/javascript">
            $(document).ready(function () {
                function UploadPicOrn1() {
                    $.ajax({
                        type: 'POST',
                        url: ("@Url.Content("~/LoanManagement/RebindOrnament1")/"),
                        dataType: 'json',
                        success: function (data) {
                            $("#showOrnImg1").attr("src", data);
                            document.getElementById('Submit1').disabled = false;
                            alert("Photo Capture successfully!");
                        }
                    });
                }
                $("#Camera1").webcam({
                    width: 320,
                    height: 240,
                    mode: "save",
                    swffile: "@Url.Content("~/Scripts/jscam.swf")",
                    onTick: function () { },
                    onSave: function () {
                        UploadPicOrn1();
                    },
                    onCapture: function () {
                        webcam.save("@Url.Content("~/LoanManagement/CaptureOrnament1")/");
                    },
                    debug: function () { },
                    onLoad: function () { }

                });
            });
    </script>


</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="content-wrapper">
        <section class="content-header"></section>
        @using (Html.BeginForm(Html.BeginForm("UpUsrImg", "LoanManagement", FormMethod.Post, new { enctype = "multipart/form-data" })))
        {
            @Html.ValidationSummary(true)


            <div style="color: Red;">
                @ViewBag.msg
            </div>
            @*@Html.HiddenFor(m => m.LoanId)*@

            <section class="content">
                <h2>Ornament Image 1</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="camera" style=" width:338px; float: left; border: 4px solid #ccc; padding: 5px; margin:30px 30px;">
                            <div id="Camera1">
                            </div>
                        </div>
                        <input style="display:block; width:338px; height:36px; margin:0 0 30px 30px;" id="cap" type="button" value="Capture" onclick="webcam.capture();" />
                    </div>
                    <div class="col-md-6">
                        <div class="capture" style="width: 338px; float: left; border: 4px solid #ccc; padding: 5px; margin: 30px 30px; ">
                            <img id="showOrnImg1" style="width: 320px; height: 240px;" />
                        </div>
                    </div>
                    @*<div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="camera" style="float: left; border: 4px solid #ccc; padding: 5px">
                                <div id="Camera1">
                                </div>
                            </div>
                            <input id="cap1" type="button" value="Capture" onclick="webcam.capture();" />
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
