<script type="text/javascript">


    $(document).ready(function () {


        $(".clickcheck").on("click", function () {

            if (this.value === "0.0") {
                this.value = '';
            }
        });


        $("#OpeningBal").val('0.0');


        $("#btnsubmit").click(function () {




            if ($("#Code").val() == "") {

                alert("Please Enter Supplier Code");
                return false;

            }


            if ($("#Name").val() == "") {

                alert("Please Enter Supplier Name");
                return false;

            }




            if ($("#OpeningBalance").val() == "") {

                alert("Please enter opening balance");
                return false;

            }




        });



    });

</script>
<script type="text/javascript" language="javascript">

    $(document).ready(function () {


        $(".clickcheck").on("click", function () {

            if (this.value === "0.0") {
                this.value = '';
            }
        });


        $("#OpeningBal").val('0.0');

        $('.iCheck-helper').click(function () {

            var parent = $(this).parent().get(0);
            var checkboxId = parent.getElementsByTagName('input')[0].id;




            if ($('input[name="chkpostal"]:checked').length > 0) {


                $("#Country").val($("#PoCountry").val());
                $("#StateRegion").val($("#PoStateRegion").val());
                $("#City").val($("#PoCity").val());
                $("#AddressName").val($("#PoAddressName").val());
                $("#PostalCode").val($("#PoPostalCode").val());
            }

            if ($('input[name="chkpostal"]:checked').length == 0) {
                $("#PostalCountryId").val("");
                $("#StateRegion").val("");
                $("#City").val("");
                $("#AddressName").val("");
                $("#PostalCode").val("");
            }



        });


        $("#btncancel").on("click", function () {


            location.href = "/Supplier/ShowAllSupplier";


        });





    });

</script>


