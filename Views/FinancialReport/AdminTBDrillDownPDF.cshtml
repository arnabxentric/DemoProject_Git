                                                        <td align="right">
                                                            @Html.DisplayFor(modelItem => ledger.Debit)
                                                        </td>
                                                        <td align="right">
                                                            @Html.DisplayFor(modelItem => ledger.Credit)
                                                        </td>
                                                        <td align="right">
                                                            @Html.DisplayFor(modelItem => ledger.ClosingDebit)
                                                        </td>
                                                        <td align="right">
                                                            @Html.DisplayFor(modelItem => ledger.ClosingCredit)
                                                        </td>
                                                    </tr>
