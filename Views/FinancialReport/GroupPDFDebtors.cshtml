@model IEnumerable<XenERP.Models.AccountsBook_GroupWise_DateRange_Result>

@{

    var SlNo = 0;
    decimal? tdebit = 0;
    decimal? tcredit = 0;
    decimal? topeningdr = 0;
    decimal? topeningcr = 0;
    decimal? tclosingdr = 0;
    decimal? tclosingcr = 0;
    decimal? total = 0;
    int? groupid = 0;
    decimal? groupdropening = 0;
    decimal? groupcropening = 0;
    decimal? groupdr = 0;
    decimal? groupcr = 0;
    decimal? groupdrclosing = 0;
    decimal? groupcrclosing = 0;
}
