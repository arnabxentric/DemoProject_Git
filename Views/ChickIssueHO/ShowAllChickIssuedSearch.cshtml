@model IEnumerable<XenERP.Models.ModelView.ChickIssuedHOModelView>

using XenERP.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    int Slno = 0;
}
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<link href="~/css/datetimepicker/datepicker.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/JqueryValidation.js"></script>
<script src="../../js/plugins/datetimepicker/bootstrap-datepicker.js" type="text/javascript"></script>
<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #070708;
        /*#53A9BC;*/
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #070708;
    }
</style>
<script type="text/javascript">

    $(function () {
        $('#example1').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>


<aside class="right-side">
    <section class="content-header">
        <h1>Chick Details <small>List</small> </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>



    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <i class="fa fa-ban"></i>
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
            <b>Error!</b>
            @ViewBag.Error
        </div>
    }



    <div class="box">
        @if (ViewBag.Side != 1)
        {
            <div class="col-xs-12"><a href="@Url.Action("CreateChickIssued", "ChickIssueHo")" class="btn btn-primary"> <i class="fa fa-fw fa-plus-square"></i>Create New Chick</a></div><br /><br />
        }
        <div class="box-body table-responsive">

          

            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>SlNo.</th>
                        <th>Unit Name</th>
                        <th>Purchase Challan No</th>
                        <th>ChallanNo</th>
                        <th>DeliveryChallanNo</th>
                        <th>Truck No</th>
                        <th>DeliveryManName</th>
                        <th>Date of Issue</th>
                        <th>Chicks Name</th>
                        <th>Starting Chicks</th>
                        <th>Issued Chicks</th>
                        <th>Total Issued Chicks</th>
                        <th>Status</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        Slno = Slno + 1;
                        <tr>
                            <td>@Slno</td>
                            <td align="center"><a href='@Url.Action("ChickInformationDetails", "ChickIssueHO", new { id = item.Id })' class="AccoDet">@item.BranchName</a> @Html.HiddenFor(m => item.Id, new { @class = "AcId" })</td>
                            <td align="right">
                                @foreach (var ck in item.chicksdetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ChickName != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.PurchaseChallanNo)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.ChallanNo)</td>
                            <td> @Html.DisplayFor(modelItem => item.DeliveryChallanNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.DeliveryTruckNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.DeliveryManName)</td>
                            <td> @Html.DisplayFor(modelItem => item.DateOfDespatchString)</td>

                            @*<td> @Html.DisplayFor(modelItem => item.ChicksWeight)</td>*@


                            <td align="right">
                                @foreach (var ck in item.chicksdetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.ChickName != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.ChickName)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                            <td align="right">
                                @foreach (var ck in item.chicksdetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.AvailableChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.AvailableChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>

                            <td align="right">
                                @foreach (var ck in item.chicksdetailslist)
                                {
                                    <table id="#example5" class="chompa">
                                        @if (ck.IssuedChicks != null)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ck.IssuedChicks)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.ChicksPlaced_HO_)</td>



                            @if (Session["PoultryEditId"] != null)
                            {
                                if (item.Status == false)
                                {

                                    <td> @Html.Label("Already Received") </td>
                                    <td> @Html.ActionLink("Edit", "EditChickIssued", "ChickIssueHO", new { id = item.Id }, null)  </td>
                                    <td> @Html.ActionLink("Delete", "DeleteChickIssued", "ChickIssueHO", new { id = item.Id, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>

                                }

                                else
                                {
                                    <td> @Html.Label("Received Not Yet") </td>
                                    <td> @Html.ActionLink("Edit", "EditChickIssued", "ChickIssueHO", new { id = item.Id }, null)  </td>
                                    <td> @Html.ActionLink("Delete", "DeleteChickIssued", "ChickIssueHO", new { id = item.Id, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>

                                }

                            }

                            else
                            {

                                if (ViewBag.Side != 1)
                                {
                                    if (item.Status == false)
                                    {
                                        <td> @Html.Label("Already Received") </td>
                                        <td> @Html.Label("Cannot Be Edited") </td>
                                        <td> @Html.Label("Cannot Be Deleted") </td>
                                    }

                                    else
                                    {

                                        <td> @Html.Label("Received Not Yet") </td>
                                        <td> @Html.ActionLink("Edit", "EditChickIssued", "ChickIssueHO", new { id = item.Id }, null)  </td>
                                        <td> @Html.ActionLink("Delete", "DeleteChickIssued", "ChickIssueHO", new { id = item.Id, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>


                                    }


                                }
                                else
                                {
                                    if (item.Status == true)
                                    {
                                        <td> @Html.ActionLink("Accept", "ReceiveToUnit", "ChickIssueHO", new { id = item.Id }, null)  </td>

                                        <td>@Html.ActionLink("Edit", "EditChickIssued", "ChickIssueHO", new { id = item.Id }, null)</td>
                                        <td>@Html.ActionLink("Delete", "DeleteChickIssued", "ChickIssueHO", new { id = item.Id, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>

                                    }

                                    else
                                    {

                                        <td> @Html.Label("Already Received") </td>

                                        <td> </td>
                                        <td> </td>

                                    }

                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>


        </div><!-- /.box-body -->
    </div>
</aside>
