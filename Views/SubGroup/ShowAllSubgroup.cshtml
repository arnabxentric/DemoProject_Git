@model IEnumerable<XenERP.Models.GroupMaster>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    
    int SlNo = 0;


    decimal? totalsellrate = 0;
}
<script src="../../js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="../../js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    table.dataTable thead .sorting_desc
    {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }
    table.dataTable thead .sorting_asc
    {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">
    $(function () {


        $('#example1').dataTable({

            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<aside class="right-side">
          <section  class="content-header">
                    <h1>
                 Sub Group<small>List</small>            
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li><a href="#">Forms</a></li>
                        <li class="active">General Elements</li>
                    </ol>
                </section>



                     
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
                                        <i class="fa fa-check"></i>
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                     @ViewBag.Message
                                    </div>
        }
      @if (ViewBag.Error != null)
      { 
        <div class="alert alert-danger alert-dismissable">
<i class="fa fa-ban"></i>
<button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
<b>Error!</b>
@ViewBag.Error </div>
      }





    <div class="box">
                              <div class="col-xs-12"><a href="@Url.Action("CreateSubgroup", "Subgroup")" class="btn btn-primary"> <i class="fa fa-fw fa-plus-square"></i>New Subgroup</a></div><br /><br />          

        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                <thead>
                    <tr>
                    
                        <th>
                     SlNo.
                        </th>
                         <th>
                    Sub Group Code
                        </th>
                         <th>
                     Sub Group Name
                        </th>
                        <th>
                   Parent Group Name
                        </th>
                       
                       
                       
                      <th>
                    Edit
                        </th>
                         
                       
                          

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        //totalpurchaserate = totalpurchaserate + item.PurchaseRate;

                        SlNo = SlNo + 1;
                        //totalsellrate = totalsellrate + item.SellRate;
                        
                        
                        <tr>
                       <td>@SlNo</td>
                        <td>
                          @Html.DisplayFor(modelItem => item.gID)
                     
                            </td>
                            <td>
                              @Html.DisplayFor(modelItem => item.groupName)
                     
                            </td>
                             <td>

                          @{
                              
                              XenERP.Models.Repository.TaxRepository rep=new XenERP.Models.Repository.TaxRepository();

                              var group = rep.GetGroupName(Convert.ToInt32(item.ParentGroupId));

                              @group.groupName
                    }
                            </td>
                           
                              
                          
                            <td>
                                  <i class="fa fa-fw fa-edit"></i>
                             @Html.ActionLink("Edit", "EditSubGroup", new { id = item.groupID }) 
                            </td>


                            

                        </tr>
                    }
                </tbody>
   
            </table>

            </div>
            </div>
            </aside>
