    @model IEnumerable<XenERP.Models.FeedIssueDetail>

using XenERP.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    int Slno = 0;
}
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">

    $(function () {
        $('#example1').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<aside class="right-side">
    <section class="content-header">
        <h1>Feed Issued Details <small>List</small> </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>



    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <i class="fa fa-ban"></i>
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
            <b>Error!</b>
            @ViewBag.Error
        </div>
    }



    <div class="box">
    @if (ViewBag.Side != 1)
    {
        <div class="col-xs-12"><a href="@Url.Action("CreateFeedIssued", "FeedIssued")" class="btn btn-primary"> <i class="fa fa-fw fa-plus-square"></i>Create New Feed Issue</a></div><br /><br />
    }
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>SlNo.</th>  
                        <th>Challan No</th>  
                        <th>Delivery Hand Challan</th>   
                        <th>Truck No</th>   
                        <th>Delivery Man</th>    
                       
                         <th>Date Of Issue</th>
                         <th>Unit Name</th>  
                        <th width="750px">Issue Details</th>   
                                                            
                       <th>Status</th>                       
                        <th></th>
                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.GroupBy(d=>new { d.FeedIssueMasterId, d.FeedIssuedMaster.DeliveryChallanNo, d.FeedIssuedMaster.DeliveryTruckNo, d.FeedIssuedMaster.DeliveryManName, d.FeedIssuedMaster.ChallanNo, d.FeedIssuedMaster.BranchMaster.Name, d.FeedIssuedMaster.Status,d.FeedIssuedMaster.DateOfIssueString }))
                    {

                        Slno = Slno + 1;
                        <tr>
                            <td>@Slno</td> 

                             <td align="center"><a href='@Url.Action("FeedIssuedInformationDetails", "FeedIssued", new { id = item.Key.FeedIssueMasterId })' class="AccoDet">@item.Key.ChallanNo</a> @Html.HiddenFor(m => item.Key.FeedIssueMasterId, new { @class = "AcId" })</td>  
                            <td> @Html.DisplayFor(modelItem => item.Key.DeliveryChallanNo)</td> 
                            <td> @Html.DisplayFor(modelItem => item.Key.DeliveryTruckNo)</td>
                            <td> @Html.DisplayFor(modelItem => item.Key.DeliveryManName)</td>  
                          
                            <td> @Html.DisplayFor(modelItem => item.Key.DateOfIssueString)</td>
                            <td> @Html.DisplayFor(modelItem => item.Key.Name)</td>                      
                            <td width="750px">
                                @foreach (var fd in Model.Where(d=>d.FeedIssueMasterId==item.Key.FeedIssueMasterId))
                                {
                                    <table id="#example5" class="chompa table-bordered">
                                        

                                            <tr>
                                                @if (fd.PurchaseReceipt != null)
                                                {
                                                <td width="200px">
                                                    @Html.DisplayFor(modelItem => fd.PurchaseReceipt.NO)
                                                </td>
                                                }
                                                <td width="450px">
                                                    @Html.DisplayFor(modelItem => fd.ProductName)
                                                </td>
                                                <td width="100px" align="right">
                                                    @Html.DisplayFor(modelItem => fd.Quantity)
                                                </td>
                                            </tr>
                                      
                                    </table>
                                }
                            </td>
                          
                             

                         




                                @if (Session["PoultryEditId"] != null)
                                {
                                    if (item.Key.Status == "InActive")
                                    {
                               <td> @Html.Label("Already Received") </td>

                                <td> @Html.ActionLink("Edit", "EditFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId }, null)  </td>
                                <td> @Html.ActionLink("Delete", "DeleteFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>
                                }
                                else
                                {
                                    <td> @Html.Label("Issued") </td>
                                    <td> @Html.ActionLink("Edit", "EditFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId }, null)  </td>
                                    <td> @Html.ActionLink("Delete", "DeleteFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })
                            </td>


                                }



                            }

                            else
                            {

                             if (item.Key.Status == "InActive")
                             {
                              <td> @Html.Label("Already Received") </td>
                              <td> @Html.Label("Cannot Be Edited") </td>
                               <td> @Html.Label("Cannot Be Deleted") </td> 
                             }
                             else
                             {
                                 if (ViewBag.Side == 1)
                                 {

                             <td> @Html.ActionLink("Accept", "ReceiveToUnit", "FeedIssued", new { id = item.Key.FeedIssueMasterId, rf = "H.O" }, null)  </td>
                              <td></td>
                              <td></td>

                                 }
                                 else
                                 {
                                <td> @Html.Label("Issued") </td>
                                <td> @Html.ActionLink("Edit", "EditFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId }, null)  </td>
                                <td> @Html.ActionLink("Delete", "DeleteFeedIssued", "FeedIssued", new { id = item.Key.FeedIssueMasterId, }, new { onclick = "return confirm('Are you sure you wish to delete this row?');" })</td>   
                                 }
                             }



                            }


                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /.box-body -->
    </div>
</aside>

