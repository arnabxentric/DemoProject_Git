                                        <div class="form-group">
                                          <label class="black_txt_010">
                   Remarks</label>
                  
                    
  @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })        
                                         </div>



                                          


                                         
                                         

                                            <div class="form-group">
                                          <label class="black_txt_010">
          Active </label>
                 
                  
                 
  @Html.CheckBoxFor(model => model.Status, new { @class = "form-control", @checked = "checked" })     
                 
                                      
                                         </div>
                                    
                                     </div>
                                     </div>
