@model XenERP.Models.Shift

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="../../css/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" type="text/css" />

<script src="../../js/plugins/timepicker/bootstrap-timepicker.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".timepicker").timepicker({
            showInputs: false
        });
    });
</script>

 @using (Html.BeginForm())
 {
    @Html.ValidationSummary(true)
     @Html.HiddenFor(d => d.Id)
            @Html.HiddenFor(d => d.UserId)
              @Html.HiddenFor(d => d.CompanyId)
                @Html.HiddenFor(d => d.BranchId)
                 
                    @Html.HiddenFor(d => d.CreatedOn)
       
        
    <aside class="right-side">
          <section  class="content-header">
                    <h1>
                        Shift   <small>Master Entry</small>                    
                    </h1>
                    @*<ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
