                                                  @Html.TextBoxFor(model => model.EndTime, new { @class = "form-control timepicker" })        
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                            </div><!-- /.input group -->
                                        </div><!-- /.form group -->
                                    </div>

                                          














                                        </div>
                                        </div>
                                       </div> 

                                        
