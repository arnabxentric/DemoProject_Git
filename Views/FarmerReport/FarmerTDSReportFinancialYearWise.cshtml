<script type="text/javascript">

    $(document).ready(function () {

        $("#dp3").datepicker({ autoclose: true, todayHighlight: true, language: Culture });
        $("#dp4").datepicker({ autoclose: true, todayHighlight: true, language: Culture });
        var Culture = "@Session["DateCulture"]";

        $("#loader").hide();
        $("#graph").hide();


        $('#btnsubmit').click(function () {

            $("#graph").show();

            var unit = $("#UnitCode").val();
            var fromdate = $("#FromDate").val();
            var todate = $("#ToDate").val();

            $("#btnshow").hide();

            $("#loader").show();

            $("#loading").fadeIn();
            var opts = {
                lines: 12, // The number of lines to draw
                length: 7, // The length of each line
                width: 4, // The line thickness
                radius: 10, // The radius of the inner circle
                color: '#000', // #rgb or #rrggbb
                speed: 2.0, // Rounds per second
                trail: 60, // Afterglow percentage
                shadow: false, // Whether to render a shadow
                hwaccel: false // Whether to use hardware acceleration
            };
            var target = document.getElementById('loading');
            var spinner = new Spinner(opts).spin(target);
            if (fromdate != "" && todate != "") {


                $.get("/FarmerReport/FarmerTDSReportFinancialYearWisePartial", { From: fromdate, To: todate, unitid: unit }, function (data) {

                    $("#btnshow").show();
                    $("#loader").hide();
                    $("#loading").fadeOut();
                    $("#FarmDetails").css("display", "block");
                    $("#FarmDetails").html(data);
                   
                });

            }

            else {

                $.get("/FarmerReport/FarmerTDSReportFinancialYearWisePartial", { From: 0, To: 0, unitid: unit }, function (data) {

                    $("#btnshow").show();
                    $("#loader").hide();
                    $("#loading").fadeOut();
                    $("#FarmDetails").css("display", "block");
                    $("#FarmDetails").html(data);
                   
                });

            }


        });
    });
  

</script>



