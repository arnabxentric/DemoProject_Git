@using (Html.BeginForm())
{


    <aside class="right-side">

     
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="pull-right"> <input name="" type="submit" id="btnsave" value="Save" class="btn btn-primary" /></li>
                <li class="pull-right"> <input name="" type="button" id="btnPDF" value="Print" class="btn btn-primary" /></li>

            </ul>
        </div>
        <section class="content">

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @ViewBag.Message
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                    <b>Error!</b>
                    @ViewBag.Error
                </div>
            }


            @*@Html.HiddenFor(d => d.Id)*@

            <section class="content">
                <div id="print1">
                    <div class="row">

                        <table style="padding-left:70px">
                            <tr>
                                <td>Farmer Name : </td>
                                <td>&nbsp;&nbsp;@Html.DisplayFor(model => model.FarmerName, new { @class = "form-control" })</td>
                                <td>&nbsp;&nbsp; </td>
                                <td>Flock Code:</td>
                                <td>&nbsp;&nbsp;@Html.DisplayFor(model => model.FlockCode, new { @class = "form-control" })@Html.HiddenFor(model => model.FlockId, new { @class = "form-control" })</td>
                                <td>&nbsp;&nbsp;</td>
                                <td>Flock Start Date: </td>
                                <td>&nbsp;&nbsp;@Html.DisplayFor(model => model.FlockStartingDateString, new { @class = "form-control" })</td>
                                <td>&nbsp;&nbsp; </td>
                                <td>Flock End Date:</td>
                                <td>&nbsp;&nbsp;@Html.DisplayFor(model => model.FlockEndDateString, new { @class = "form-control" })</td>
                                <td>Growing Stage</td>
                                <td>&nbsp;&nbsp;@Html.DisplayFor(model => model.AgeOfChicks, new { @class = "form-control" })</td>
                            </tr>

                        </table>

                    </div>

                    <div class="col-md-12">

                        <div class="form-group">
                            <h3>Medicine Details</h3>
                        </div>
                        <div class="form-group">
                            <div class="table-responsive">
                                <table class="my-table-style table" id="dataTable">
                                    <tr class="my-table-header">

                                        <td class="my-table-header" style="text-align:center;">
                                            <label class="black_txt_010">Medicine Name</label>
                                        </td>
                                        <td class="my-table-header" style="text-align:center;">
                                            <label class="black_txt_010">Rate</label>
                                        </td>

                                        <td class="my-table-header" style="text-align:center;">
                                            <label class="black_txt_010">Consumption</label>
                                        </td>

                                        <td style="text-align:center;">
                                            <label class="black_txt_010">Amount</label>
                                        </td>




                                        @{ int H = 0;

                                        }

                                        @for (int i = 0; i < @Model.medlist.Count(); i++)
                                    {
                                        H = H + i;

                                        <tr>

                                            <td style="text-align:center;">
                                                @Html.DisplayFor(model => model.medlist[i].MedicineName, new { @class = "form-control", @placeholder = "Enter Farm Unit Name", @maxlength = "100", @id = "Category" + i, @Name = "CategoryName" + i })

                                            </td>

                                            <td style="text-align:center;">
                                                @Html.DisplayFor(model => model.medlist[i].Rate, new { @class = "form-control", @placeholder = "Enter Farm Unit Name", @maxlength = "100", @id = "Feed" + i, @Name = "FeedName" + i })

                                            </td>

                                            <td style="text-align:center;">
                                                @Html.DisplayFor(model => model.medlist[i].Consumed, new { @class = "form-control", @id = "FeedDesc" + i, @Name = "FeedDesc" + i })
                                            </td>

                                            <td style="text-align:center;">
                                                @Html.DisplayFor(model => model.medlist[i].Amount, new { @class = "form-control FeedQuantity", @id = "FeedQuantity" + i, @Name = "FeedQuantity" + i })
                                            </td>

                                        </tr>
                                    }

                                    </table>

                                    @Html.Hidden("IdToHold", H)
                                </div>

                            </div>



                        </div>


              </div>

           
              
                </section>
        </aside>
                                    }
