@model IEnumerable<XenERP.Models.Company>
@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}
@{

    ViewBag.Title = "Xpert | Company List";
}
@{
    
    decimal? totalpurchaserate = 0;
    var compid = Session["companyid"];

    int SlNo = 0;
    decimal? totalsellrate = 0;
}
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    table.dataTable thead .sorting_desc
    {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }
    table.dataTable thead .sorting_asc
    {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">
    $(function () {


        $('#example1').dataTable({

            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<aside class="right-side">
          <section  class="content-header">
                    <h1>
                     Company <small>List</small>            
                    </h1>
                    <ol class="breadcrumb">
                        <li>  <div class="companyname underline"><a href="@Url.Action("Logout","Home")"> <h5>LogOut</h5></a></div></li>
                       
                    </ol>
                </section>


                     
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
                                        <i class="fa fa-check"></i>
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                     @ViewBag.Message
                                    </div>
        }
      @if (ViewBag.Error != null)
      { 
        <div class="alert alert-danger alert-dismissable">
<i class="fa fa-ban"></i>
<button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
<b>Error!</b>
@ViewBag.Error </div>
      }


      
                  

    <div class="box">
        <div class="box-body table-responsive">
            <table width="100%" id="" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                <thead>
                    <tr>
                    <th>
                    
                    SlNo.
                    </th>
                        <th>
                         Company Name
                        </th>
                        <th>
                           Created Date
                        </th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        SlNo = SlNo + 1;

                        <tr>
                        <td width="25%">@SlNo</td>

                       
                            <td width="45%">
                               <a href="@Url.Action("DashBoard", "DashBoard", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.Name)</a>
                            </td>
                            
                            <td width="35%">

                            @{

                        XenERP.Models.Repository.TaxRepository rep = new XenERP.Models.Repository.TaxRepository();

                        var format = rep.Getcompanydateformat(Convert.ToInt32(item.Id));
                        var dateformatid = rep.Getdateformat(format.DateCultureFormatId);

                        string dateformat = "{0:" + dateformatid.ShortDatePattern + "}";
                        
                        @String.Format(dateformat, item.CreatedDate);
                        

                    }
                            
                            </td>


                           
                        </tr>
                    }
                </tbody>
                

            </table>

            </div>
            </div>



                  

                                          <form >
                    	
                        <div class="setup-content">
                        
                            
                            <div class="clr"></div>
           <div style="clear:both;" class="buttons setup-buttons">
                              
   <center> <b style="text-align:center;">To Create a New Company, Click Here</b>  <a class="btn btn-primary" href="@Url.Action("Createcompany", "Company")"> Create New</a>
   </center>
   </div>

                            <div class="clr"></div>
                            <br />
                          
                        </div>
                    </form>
                    

            </aside>
