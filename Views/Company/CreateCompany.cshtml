<script type="text/javascript">
        $(document).ready(function () {
         $("#loader").hide();
         $("#btnsubmit").on("click", function () {
             
                if ($('form').valid()) {

                    $("#btnsubmit").hide();
                    $("#loader").show();
                }

                else {

                    $("#btnsubmit").show();
                      $("#loader").hide();
                }
            });
        });
        </script>
