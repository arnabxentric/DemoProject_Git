<script type="text/javascript" language="javascript">

    $(document).ready(function () {


        $('.iCheck-helper').click(function () {

            var parent = $(this).parent().get(0);
            var checkboxId = parent.getElementsByTagName('input')[0].id;

            if ($('input[name="chkpostal"]:checked').length > 0) {

                $("#PostalCountryId").val($("#CountryId").val());

                $("#PostalStateId").val($("#StateId").val());

                $("#PostalCity").val($("#City").val());

                $("#PostalAddress").val($("#Address").val());

                $("#PostalZipcode").val($("#Zipcode").val());
                            }

            if ($('input[name="chkpostal"]:checked').length == 0) {
                $("#PostalCountryId").val("");


                $("#PostalStateId").val("");



                $("#PostalCity").val("");

                $("#PostalAddress").val("");


                $("#PostalZipcode").val("");
            }



        });




    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#productimg").change(function () {
        readURL(this);
    });


</script>
