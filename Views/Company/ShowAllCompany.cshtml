*@
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                <thead>
                    <tr>
                    
                        <th>
                     SlNo.
                        </th>
                        <th>
                   Company Name
                        </th>
                        <th>
                      Base Currency
                        </th>
                       

                            <th>
                  
                        </th>
                           <th>
                  
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        //totalpurchaserate = totalpurchaserate + item.PurchaseRate;

                        SlNo = SlNo + 1;
                        //totalsellrate = totalsellrate + item.SellRate;
                        
                        
                        <tr>
                       <td>@SlNo</td>
                            <td>

                         


                                 @Html.DisplayFor(modelItem => item.Name)
                     
                            </td>
                            <td>
                       
                     @{
                         
                        try
                        {
                            XenERP.Models.Repository.TaxRepository rep = new XenERP.Models.Repository.TaxRepository();
                      
                            

                            XenERP.Models.Currency cur = rep.GetCurency(Convert.ToInt32(item.CurrencyId));
                        @cur.ISO_4217
                        }
                        catch { }

                    }
                  
                            </td>
                              
                         
                            <td style="text-align:center;">
                            <center>    
                           @*  <a class="deleteimg" href="@Url.Action("Company", "EditCompany")" title="Delete"> </a> *@

                             @Html.ActionLink("Edit", "EditCompany", new { id = item.Id }) 
