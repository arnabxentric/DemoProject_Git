@model IEnumerable<XenERP.Models.PurchaseInvoiceDetail>
@{

    var SlNo = 0;
    decimal Total = 0;
    decimal Bags = 0;
    decimal Kgs = 0;
}
<!--for graph   -->
<!--for graph   -->

<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">
    $(function () {


        $('#example1').dataTable({

            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<style type="text/css">
    .ui-autocomplete-loading {
        background: white url("../../Images/ajax-loader(1).gif") right center no-repeat;
    }

    .ErrorControl {
        background: none repeat scroll;
        border: 1px solid Red;
        padding: 4px;
        width: 96%;
    }

    .pad svg {
        width: 100% !important;
    }
</style>
@if (Model.Count() > 0)
{
    <aside class="right-side">

        <div class="box box-primary">
            <div class="box-header">

            </div>
            <div class="box-body">
                <div class="box-body table-responsive divContent">
                    <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                        <thead>
                            <tr>

                                <th>
                                    SlNo.
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Supplier Name
                                </th>

                                <th>
                                    Invoice No.
                                </th>
                                <th>
                                    Item
                                </th>
                                <th>
                                    Quantity
                                </th>
                               
                                <th>
                                  Unit
                                </th>
                                <th>
                                    Amount
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {




                                SlNo = SlNo + 1;

                                Total = Total + item.TotalAmount;
                                Bags += item.Quantity;
                                


                                <tr>

                                    <td>
                                        @SlNo
                                    </td>
                                    <td>


                                        @String.Format(@Session["DateFormatUpper"].ToString(), item.PurchaseInvoice.Date)

                                    </td>
                                    <td style="text-align:left;">
                                        @Html.DisplayFor(modelItem => item.PurchaseInvoice.Supplier.Name)

                                    </td>

                                    <td>

                                        @Html.DisplayFor(modelItem => item.PurchaseInvoice.NO)
                                    </td>



                                    <td align="right">

                                        @Html.DisplayFor(modelItem => item.Product.Name)

                                    </td>
                                    <td align="right">

                                        @Html.DisplayFor(modelItem => item.Quantity)

                                    </td>
                                    <td align="right">

                                        @Html.DisplayFor(modelItem => item.UOM.Description)

                                    </td>
                                    
                                    <td align="right">

                                        @Html.DisplayFor(modelItem => item.TotalAmount)

                                    </td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>

                                <td></td>

                                <td></td>

                                <td></td>
                                <td></td>

                               
                                <td align="right">
                                    <b>Grand Total</b>
                                </td>
                                <td align="right"><b>@Bags</b></td>
                                <td align="right"><b></b></td>
                               
                                <td align="right"><b>@Total</b></td>

                            </tr>
                        </tfoot>

                    </table>

                </div>
            </div>
        </div>
    </aside>
}

else
{
    <aside class="right-side">

        <div class="box box-primary">
            <div class="box-header">

            </div>
            <div class="box-body table-responsive divContent">
                <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th>
                                SlNo.
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Supplier Name
                            </th>

                            <th>
                                Invoice No.
                            </th>
                            <th>
                                Item
                            </th>
                            <th>
                                Bags
                            </th>
                            KGs/Bag
                            <th>
                                Total KGs
                            </th>
                            <th>
                                Amount
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd">
                            <td class="dataTables_empty" valign="top" colspan="5">No matching records found</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>


    </aside>

}
