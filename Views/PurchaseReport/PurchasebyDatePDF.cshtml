@model IEnumerable<XenERP.Models.PurchaseInvoice>
@{
   
    var SlNo = 0;
  
    decimal TotAmt = 0;
    
    Layout = "~/Views/Shared/_LayoutReport.cshtml";

}


<!--for graph   -->
<!--for graph   -->


<aside class="right-side">

<center>
<table>
<tr>
<td>

@if (ViewBag.branchname != null)
{
<b>@ViewBag.Name (@ViewBag.branchname) </b>
}
else
{
    @ViewBag.Name 
}
</td>
</tr>



<tr>
<td>
<b>Purchase By Date</b>
</td>
</tr>

<tr>
<td>
@try
{

    if (ViewBag.from != null)
    {
  @Html.Raw("From:")@String.Format("{0:dd/MM/yyyy}", ViewBag.from)     @Html.Raw("&nbsp;&nbsp;")     @Html.Raw("")             @Html.Raw("To:")@String.Format("{0:dd/MM/yyyy}", ViewBag.to);

    }
}
catch
{
}
</td>
</tr>







</table>
</center>

<div class="box box-primary">
                                 
                                 
   <div class="box-body table-responsive divContent">

             <table id="example1" width="100%" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                <thead>
                    <tr>
                    
                        <th>
                     SlNo.
                        </th>
                       
                        <th>
                    Date
                        </th>
                    
                        <th>
                         Bill No.
                        </th>
                      
                         <th>
                         Party Name
                        </th>
                        
                         
                         <th>
                         Net Amount
                        </th>
                        



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                      
                        
                        SlNo = SlNo + 1;

                       
                        
                        TotAmt += item.BCGrandTotal;

                        
                        <tr>

                       <td>
                       @SlNo
                       </td>
                            <td>
                            
@*                   @String.Format(@Session["DateFormatUpper"].ToString(), item.Date)*@
                         
                     @String.Format("{0:dd/MM/yyyy}", item.Date)
                            </td>
                             <td align="left">
                          @Html.DisplayFor(modelItem => item.NO)
                     
                            </td>
                            
                           
                            <td align="left">
                          @Html.DisplayFor(modelItem => item.Supplier.Name)
                     
                            </td>
                            
                             <td align="right">
                          @Math.Round(item.BCGrandTotal,2)
                     
                            </td>
                            
                              
                         

                        </tr>
                    }
                </tbody>
                <tfoot>
                 <tr>

                       <td>
                      
                       </td>
                            <td>
                            
                        Grand Total
                         
                    
                            </td>
                             
                            
                           
                            <td align="center">
                        
                     
                            </td>
                             <td align="center">
                        
                     
                            </td>
                             
                             <td align="right">
                          @Math.Round(TotAmt,2)
                     
                            </td>
                             
                              
                         

                        </tr>
                </tfoot>
   
            </table>

            </div>

</div>
</aside>
