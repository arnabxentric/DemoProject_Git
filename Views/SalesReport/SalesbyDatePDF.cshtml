                Freight = item.TotalAddAmount;
                TotalFreight += item.TotalAddAmount;
                Discount = ((decimal)item.TotalDeductAmount + (decimal)item.DisAmount);
                DiscountTotal += Discount;
                var tax = item.TaxProduct + item.TaxOther;
                TaxTotal += tax;
                TotAmt += item.BCGrandTotal;


                <tr>

                    <td>
                        @SlNo
                    </td>
                    <td>

                        @*                   @String.Format(@Session["DateFormatUpper"].ToString(), item.Date)*@

