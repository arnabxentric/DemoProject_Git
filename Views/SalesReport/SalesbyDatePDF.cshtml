                        @Html.DisplayFor(modelItem => item.NO)

                    </td>


                    <td align="left">
                        @Html.DisplayFor(modelItem => item.CustomerName)

                    </td>

                    <td align="right">
                        @Math.Round(sub, 2)

                    </td>
                    <td align="right">
                        @Math.Round(Freight, 2)

                    </td>
                    <td align="right">
                        @Math.Round(Discount, 2)

                    </td>
                    <td align="right">
                        @Math.Round(tax, 2)

                    </td>
                    <td align="right">
                        @Math.Round(item.BCGrandTotal, 2)

                    </td>




