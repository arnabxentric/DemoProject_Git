@model IEnumerable<XenERP.Models.SalesInvoiceModelView>
@{
    Layout = null;
    var SlNo = 0;
    decimal totalKgs = 0;
    decimal Bags = 0;
    decimal netBags = 0;
    decimal netKgs = 0;

    decimal totalamount = 0;

    long? RecurringSalesId = 0;
    decimal groupKgs = 0;
    decimal groupBags = 0;
    decimal groupTotal = 0;
    int maxCount = Model.Count();
}
<!--for graph   -->
<!--for graph   -->
<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">
    $(function () {


        $('#example1').dataTable({

            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": false,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<style type="text/css">
    .ui-autocomplete-loading {
        background: white url("../../Images/ajax-loader(1).gif") right center no-repeat;
    }

    .marginleft10 {
        margin-left: 10px !important;
    }

    .screenlet-title-bar {
        color: #0099cc;
        font-size: 14pt;
        font-weight: bold;
        height: 24px;
    }

    .ErrorControl {
        background: none repeat scroll;
        border: 1px solid Red;
        padding: 4px;
        width: 96%;
    }

    .pad svg {
        width: 100% !important;
    }
</style>
@*@if (Model.Count() > 0)
    {*@
<aside class="right-side">

    <div class="box box-primary">
        <div class="box-header">

        </div>
        <div class="box-body">

            <div class="box-body table-responsive divContent">
                <div align="center">
                    <span style="font-size:x-large;font-weight:bolder">HI-BREED INTERNATIONAL SALES && SERVICE</span><br />
                    <span style="font-size:medium;font-weight:normal"> 22, R.N. Mukherjee Road, 5th Floor, Kolkata-700 001</span><br />
                    <span style="font-size:medium;font-weight:normal">GST NO - 19AABFH7726D1ZG</span>
                    <br />
                    <span style="font-size:medium;font-weight:normal">From @ViewBag.from To @ViewBag.to</span>
                    <br />
                    <br />
                    <div style="font-size:medium;font-weight:normal;text-align:left;padding-left:10px">
                       <span style="font-size:medium;font-weight:bold""> Sale Analysis Register</span>
                       
                    </div>
                </div>
                <br />
                <table id="example1" width="100%" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                        <tr>

                            <th>
                                SlNo.
                            </th>

                            <th>
                                Party
                            </th>

                            <th>
                                Quantity(Bags)
                            </th>

                            @*<th>
                                Unit
                            </th>*@

                            <th>
                                Quantity(KGs)
                            </th>

                            <th>
                                Rate
                            </th>

                            <th>
                                Total Amount
                            </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            SlNo = SlNo + 1;

                            totalKgs = Math.Round(item.TaxProduct, 3);
                            Bags = Math.Round(item.SubTotal, 0);
                            //if (item.UnitIdSecondary == 1)
                            //{
                            //    Bags = item.UnitFormula;
                            //    Kgs = item.Quantity;
                            //}
                            //else
                            //{
                            //    Bags = item.Quantity;
                            //    Kgs = item.SecUnitFormula;
                            //}
                            netBags += Bags;
                            netKgs += totalKgs;
                            totalamount += item.RoundOff;

                            if (item.RecurringSalesId != RecurringSalesId)
                            {
                                if (SlNo != 1)
                                {

                                    <tr style="padding:5px;">

                                        <td></td>



                                        <td align="right">

                                            
                                        </td>

                                        <td align="right" style="border-top: thin solid; border-bottom: thin solid;">
                                            @Math.Round(groupBags, 2)

                                        </td>
                                        @*<td align="left" style="border-top: thin solid; border-bottom: thin solid;">

                                            Bags
                                        </td>*@
                                        <td align="right" style="border-top: thin solid; border-bottom: thin solid;">

                                            @Math.Round(groupKgs, 2)
                                        </td>
                                        @*<td align="left">

                                            KGS
                                        </td>*@
                                        <td></td>
                                        <td align="right" style="border-top: thin solid; border-bottom: thin solid;">
                                            @Math.Round(groupTotal, 2)

                                        </td>


                                    </tr>
                                    <tr style="padding:7px;"><td colspan="5">&nbsp;</td></tr>

                                    groupBags = 0;
                                    groupKgs = 0;
                                    groupTotal = 0;
                                }
                            }
                    <tr>

                        <td>
                            @SlNo
                        </td>



                        <td align="left">
                            @Html.DisplayFor(modelItem => item.CustomerName)

                        </td>

                        <td align="right">
                            @Math.Round(item.SubTotal, 2)

                        </td>
                        @*<td align="left">

            Bags
        </td>*@
                        <td align="right">

                            @Math.Round(item.TaxProduct, 2)
                        </td>
                        @*<td align="left">

                              KGS
                        </td>*@
                        <td align="right">
                            @Math.Round(item.BCGrandTotal, 2)

                        </td>
                        <td align="right">
                            @Math.Round(item.RoundOff, 2)

                        </td>


                    </tr>

                            groupBags += item.SubTotal;
                            groupKgs += item.TaxProduct;
                            groupTotal += item.RoundOff;
                            RecurringSalesId = item.RecurringSalesId;

                            if (SlNo == maxCount)
                            {

                                <tr style="padding:5px;">

                                    <td></td>



                                    <td align="right"></td>

                                    <td align="right" style="border-top: thin solid; border-bottom: thin solid;">
                                        @Math.Round(groupBags, 2)

                                    </td>
                                    @*<td align="left" style="border-top: thin solid; border-bottom: thin solid;">

                                            Bags
                                        </td>*@
                                    <td align="right" style="border-top: thin solid; border-bottom: thin solid;">

                                        @Math.Round(groupKgs, 2)
                                    </td>
                                    @*<td align="left">

                                            KGS
                                        </td>*@
                                    <td></td>
                                    <td align="right" style="border-top: thin solid; border-bottom: thin solid;">
                                        @Math.Round(groupTotal, 2)

                                    </td>


                                </tr>
                                    <tr style="padding:7px;"><td colspan="5">&nbsp;</td></tr>



                            }

                        }
                    </tbody>
                    <tfoot>
                        <tr>

                            <td></td>
                            <td>
                                Grand Total
                            </td>
                            <td align="right">
                                @netBags
                            </td>
                            @*<td align="center"></td>*@
                            <td align="right">
                                @Math.Round(netKgs, 2)
                            </td>
                            <td align="center"></td>
                            <td align="right">
                                @Math.Round(totalamount, 2)
                            </td>

                        </tr>
                    </tfoot>

                </table>

            </div>
        </div>
    </div>
</aside>
