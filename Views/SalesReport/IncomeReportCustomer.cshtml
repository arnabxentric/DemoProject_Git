<aside class="right-side">
                 <div class="box box-primary">
                 <div class="box-header"></div>
                 <div class="box-body">
                 <div class="box-body table-responsive divContent">
                 <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                 <thead></thead>
                <tbody>
                           <tr>
                           <th colspan="7">
                          <h3>Income Report By Customer Wise</h3>
                           </th>
                           </tr>
                          
                           <tr>
                           <th>SlNo.</th>
                            <th>Invoice No.</th>
                           <th>Item Name</th>
                           <th>Product Quantity</th>
                           <th >Purchase Price </th>
                           <th>Sales Price</th>
                           <th>Profit</th>
                           </tr>
                       

                      @foreach (var item in Model)
                      {
                          SlNo = SlNo + 1;
                           
                                     <tr>
                                     <td> @SlNo</td>
                                     <td>@Html.DisplayFor(modelitem=>item.NO)</td>
                                     <td> @Html.DisplayFor(modelItem => item.Name)</td>
                                     <td align="center">@Html.DisplayFor(modelItem => item.PQuantity)</td>
                                     <td align="right"> @Html.DisplayFor(modelItem => item.PPrice)</td>
                                      <td align="right"> @Html.DisplayFor(modelItem => item.SPrice)</td>
                                       <td align="right"> @Html.DisplayFor(modelItem => item.Profit)</td>
                                     </tr>
                      
                      }

                      
                               <tr>
                       <td align="right" colspan="4">  <b> Grand Total :</b></td>
                       <td align="right"><b> @Html.DisplayFor(model=>model.FirstOrDefault().PPriceTotal)</b> </td>
                         <td align="right"><b> @Html.DisplayFor(model=>model.FirstOrDefault().SPriceTotal)</b> </td>
                          <td align="right"><b> @Html.DisplayFor(model=>model.FirstOrDefault().ProfitTotal)</b> </td>
                    </tr>   
              
                      
                </tbody>
            </table>
            </div>
            </div>
            </div>
