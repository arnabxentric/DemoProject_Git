@model IEnumerable<XenERP.Models.SalesInvoice>
@{

    var SlNo = 0;
    decimal Total = 0;

    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}
<!--for graph   -->
<!--for graph   -->

<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>

<style type="text/css">
    .ui-autocomplete-loading {
        background: white url("../../Images/ajax-loader(1).gif") right center no-repeat;
    }

    .ErrorControl {
        background: none repeat scroll;
        border: 1px solid Red;
        padding: 4px;
        width: 96%;
    }

    .pad svg {
        width: 100% !important;
    }
</style>
@if (Model.Count() > 0)
{
    <aside class="right-side">
        <center>
            <table>
                <tr>
                    <td>

                        @if (ViewBag.branchname != null)
                        {
                            <b>@ViewBag.Name (@ViewBag.branchname) </b>
                        }
                        else
                        {
                            @ViewBag.Name
                        }
                    </td>
                </tr>



                <tr>
                    <td>
                        <b>Sales By Customer</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @try
                        {

                            if (ViewBag.from != null)
                            {
                                @Html.Raw("From:")@String.Format("{0:dd/MM/yyyy}", ViewBag.from)     @Html.Raw("&nbsp;&nbsp;")     @Html.Raw("")             @Html.Raw("To:")@String.Format("{0:dd/MM/yyyy}", ViewBag.to);

                            }
                        }
                        catch
                        {
                        }
                    </td>
                </tr>







            </table>
        </center>
        <div class="box box-primary">
            <div class="box-header">

            </div>
            <div class="box-body">
                <div class="box-body table-responsive divContent">
                    <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                        <thead>
                            <tr>

                                <th>
                                    SlNo.
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Customer Name
                                </th>

                                <th>
                                    Invoice No.
                                </th>
                                <th>
                                    Amount
                                </th>





                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {




                                SlNo = SlNo + 1;

                                Total = Total + item.BCGrandTotal;


                                <tr>

                                    <td>
                                        @SlNo
                                    </td>
                                    <td>


                                        @String.Format(@Session["DateFormatUpper"].ToString(), item.Date)

                                    </td>
                                    <td style="text-align:left;">
                                        @Html.DisplayFor(modelItem => item.Customer.Name)

                                    </td>

                                    <td>

                                        @Html.DisplayFor(modelItem => item.NO)
                                    </td>



                                    <td align="right">

                                        @Html.DisplayFor(modelItem => item.BCGrandTotal)

                                    </td>




                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>

                                <td></td>

                                <td></td>

                                <td></td>
                                <td align="right">
                                    <b>Grand Total</b>
                                </td>
                                <td align="right"><b>@Total</b></td>

                            </tr>
                        </tfoot>

                    </table>

                </div>
            </div>
        </div>
    </aside>
}

else
{
    <aside class="right-side">

        <div class="box box-primary">
            <div class="box-header">

            </div>
            <div class="box-body table-responsive divContent">
                <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th>
                                SlNo.
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Customer Name
                            </th>
                            <th>
                                Invoice No.
                            </th>
                            <th>
                                Amount
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd">
                            <td class="dataTables_empty" valign="top" colspan="5">No matching records found</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>


    </aside>

}
