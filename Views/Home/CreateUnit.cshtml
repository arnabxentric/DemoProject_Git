@model XenERP.Models.UOM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    
    int slno = 0;    
    
}

<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />

<style type="text/css">
    
    table.dataTable thead .sorting_desc
    {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }
    table.dataTable thead .sorting_asc
    {
        background: url("/Images/sort_asc.png") no-repeat scroll right center#53A9BC;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {


        $("#btncancel").on("click", function () {


            location.href = "/Home/Unitcancel";


        });


     
    });


    $(function () {

        $('#example1').dataTable({

//            "bPaginate": true,
//            "bLengthChange": true,
//            "bFilter": true,
//            "bSort": true,
//            "bInfo": true,
//            "bAutoWidth": true
        });
    });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

       
        
    <aside class="right-side">
          <section  class="content-header">
                    <h1>
                     Unit   <small>Master Entry</small>                    
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li><a href="#">Forms</a></li>
                        <li class="active">General Elements</li>
                    </ol>
                </section>
                            

                     
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
                                        <i class="fa fa-check"></i>
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                     @ViewBag.Message
                                    </div>
        }
      @if (ViewBag.Error != null)
      { 
        <div class="alert alert-danger alert-dismissable">
<i class="fa fa-ban"></i>
<button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
<b>Error!</b>
@ViewBag.Error </div>
      }

                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <!-- left column -->
                        @*<div class="col-md-6">*@
                            <!-- general form elements -->
                         
                               
                                <!-- form start -->
                           
                                <div class="col-md-6">
                                <div class="box box-primary">
                                <div class="box-header">
                
</div>
                                   <div class="box-body">
                                       
                           

                     
      
                                    <div class="form-group">
                                          <label class="black_txt_010">
                  Symbol :<span style="color:Red;">*</span></label>

                  @Html.HiddenFor(model => model.Id)


                   @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Enter Symbol e.g-Kg",@maxlength="8" })
                 @Html.ValidationMessageFor(model => model.Code)

                                  <span style="color:Red">   <label id="currencyratebuy"></label> </span>
                                      
                                     
                                    </div>




                                    
                                    <div class="form-group">
                                          <label class="black_txt_010">
                  Description:<span style="color:Red;">*</span></label>
    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter Description e.g-Kilogram", @maxlength = "30" })
                 @Html.ValidationMessageFor(model => model.Description)

                                                             <span style="color:Red">   <label id="currencyratesell"></label> </span>
                                      
                                     
                                    </div>






                                    @if(Model.Id==0)
                                    {

                                    <div class="box-footer">
                                        <input type="submit" id="btnsubmit" value="Submit" class="btn btn-primary"/>
                                        <div id="progress" style="display: none">
        <img src="../../Images/ajax-loader.gif" />
        </div>
                                    </div>
      
                                        }
                                        else
                                        {
                                    
                                    <div class="box-footer">
                                        <input type="submit" id="btnedit" value="Update" class="btn btn-primary"/>


                                   @*     @Html.ActionLink("Cancel", "CreateUnit", new { @class = "btn btn-primary" })*@

                                         <input type="button" id="btncancel" value="Cancel" class="btn btn-primary"/>
                                        <div id="progress" style="display: none">
        <img src="../../Images/ajax-loader.gif" />
        </div>
                                    </div>

                                        }

                                    
                    
                    
                    
                                    </div>
                                    </div>
                                    </div>
                               
                                
                                <div class="col-md-6">
                      
                                <div class="box box-primary">
                                <div class="box-header">             </div>


                                 
                                    <div class="box-body table-responsive">

                        <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                     <th>SlNo.</th>        
            <th>
              Symbol
            </th>
            <th>
               Description
            </th>
           
            <th>
            </th>
   
                                            </tr>
                                        </thead>
                                        <tbody>
                                             @foreach (XenERP.Models.UOM item in @ViewBag.units)
                                             {
                                                 slno = slno + 1;
                                                 
                                                 
                                                 
        <tr>
           <td>@slno</td>
           
           
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
             <td>
               @Html.DisplayFor(modelItem => item.Description)
            </td>
           
            <td>
            <i class="fa fa-fw fa-edit"></i>
                @Html.ActionLink("Edit", "CreateUnit", new { id = item.Id }) 
                
            </td>
        
        </tr>
                                      
                                                 
                                                 
                                             }
                                               </tbody>
                                       
                                    </table>
                                    </div>
                                </div>
                                        </div>


                             
                         
                    </div>   <!-- /.row -->

                 
                   
                </section><!-- /.content -->

        
      
        </aside>
        
        
        
        
}
