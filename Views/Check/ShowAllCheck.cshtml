@model IEnumerable<XenERP.Models.CheckMasterModelView>
@using XenERP.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    int Slno = 0;
}
<link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
<link href="../../css/Designer.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    table.dataTable thead .sorting_desc {
        background: url("/Images/sort_desc.png") no-repeat scroll right center #53A9BC;
    }

    table.dataTable thead .sorting_asc {
        background: url("/Images/sort_asc.png") no-repeat scroll right center #53A9BC;
    }
</style>
<script type="text/javascript">

    $(function () {
        $('#example1').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>
<aside class="right-side">
    <section class="content-header">
        <h1>Checklist Details <small>List</small> </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>



    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <i class="fa fa-ban"></i>
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button"></button>
            <b>Error!</b>
            @ViewBag.Error
        </div>
    }



    <div class="col-md-12"><a href="@Url.Action("CreateCheck", "Check")" class="btn btn-success"> <i class="fa fa-fw fa-plus-square"></i>New Check</a></div><br /><br />

    @foreach(var item in Model)
    {

    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">@Html.Label(item.CheckName)</div>
            <div class="box-body">

                <div class="form-group">
                    <ul>

                     @foreach(var chk in item.CheckMasterDetails)
                     {
                         
                         <li>@Html.CheckBox("Check")@Html.Label(chk.CheckDescription)</li>
                     }

                    </ul>



                    @*<label class="black_txt_010"> Check Name :<span style="color:Red;">*</span> </label>
                    @Html.TextBoxFor(model => model.CheckName, new { @class = "form-control", @placeholder = "Enter Check Name", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.CheckName)*@
                </div>
                @*<input name="" type="submit" id="btnsave" value="Submit" class="btn btn-primary">*@
            </div>
        </div>
    </div>

    }




</aside>
